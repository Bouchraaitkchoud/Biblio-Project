{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
    <meta name="turbo-visit-control" content="reload">
{% endblock %}

{% block title %}Espace Administrateur - Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/templates/admin-login/admin-login.css') }}">
{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="admin-login-card p-5" style="width: 100%; max-width: 480px;">
            <div class="text-center mb-4">
                <img src="{{ asset('images/logo.png') }}" alt="Logo UIASS" style="height: 60px;">
            </div>
            <h2 class="text-center mb-4 admin-login-header">
                <i class="fas fa-user-shield"></i> Connexion Administrateur
            </h2>
            
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            
            <form action="{{ path('app_admin_check') }}" method="post" data-turbo="false" class="needs-validation" novalidate autocomplete="off">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                
                <div class="mb-4">
                    <label for="admin_username" class="form-label">
                        <i class="fas fa-user-circle"></i> Login
                    </label>
                    <input type="text" id="admin_username" name="login" class="form-control" placeholder="Entrez votre login" required autofocus autocomplete="off">
                </div>
                
                <div class="mb-4">
                    <label for="admin_password" class="form-label">
                        <i class="fas fa-lock"></i> Mot de passe
                    </label>
                    <input type="password" id="admin_password" name="password" class="form-control" placeholder="Entrez votre mot de passe" required autocomplete="new-password">
                </div>
                
                <button type="submit" class="btn btn-admin-login w-100">
                    <i class="fas fa-sign-in-alt"></i> Se connecter
                </button>
            </form>
            
            <div class="text-center mt-4">
                <a href="{{ path('app_login') }}" class="back-link">
                    <i class="fas fa-arrow-left"></i> Retour Ã  la connexion Lecteur
                </a>
            </div>
        </div>
    </div>
{% endblock %}


