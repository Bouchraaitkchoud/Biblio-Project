{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block content %}
    <div class="container my-5">
        <h1 class="mb-4"><i class="fas fa-user-circle"></i> Mon Compte</h1>
        <p class="text-muted mb-4">Bienvenue, {{ lecteur.prenom }} {{ lecteur.nom }}</p>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-id-card"></i> Informations Personnelles</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Nom Complet</div>
                    <div class="col-md-9">{{ lecteur.nom|upper }} {{ lecteur.prenom }}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Code d'Admission</div>
                    <div class="col-md-9"><code>{{ lecteur.codeAdmission }}</code></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Email</div>
                    <div class="col-md-9">{{ lecteur.email }}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Établissement</div>
                    <div class="col-md-9">{{ lecteur.etablissement }}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Formation</div>
                    <div class="col-md-9"><span class="badge bg-secondary">{{ lecteur.formation }}</span></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Promotion</div>
                    <div class="col-md-9">{{ lecteur.promotion }}</div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-shield-alt"></i> Navigation & Sécurité</h5>
            </div>
            <div class="card-body">
                <p class="text-muted mb-3">Pour des raisons de sécurité, nous vous recommandons de changer régulièrement votre mot de passe.</p>
                <div class="d-flex gap-2 flex-wrap">
                    <a href="{{ path('profile_commandes') }}" class="btn btn-info">
                        <i class="fas fa-history"></i> Mes Commandes
                    </a>
                    <a href="{{ path('profile_change_password') }}" class="btn btn-primary">
                        <i class="fas fa-key"></i> Changer mon mot de passe
                    </a>
                    <a href="{{ path('home') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-home"></i> Retour à l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

