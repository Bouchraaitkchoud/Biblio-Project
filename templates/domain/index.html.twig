{% extends 'base.html.twig' %}

{% block title %}Domaines{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #fdfaf5 !important;
            font-family: 'Georgia', serif;
            color: #4e4a45;
            min-height: 100vh;
        }

        main, .search-results {
            background-color: #ffffff !important;
            border-radius: 12px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.05);
            padding: 2rem;
        }

        .page-header {
            text-align: center;
            font-size: 3rem;
            font-weight: bold;
            margin: 2rem 0;
            color: #1a2e4f;
        }

        .search-wrapper {
            display: flex;
            justify-content: center;
            margin-bottom: 3rem;
        }

        .search-box {
            background: #ffffff;
            padding: 2rem;
            border: 1px solid #e4ddd1;
            border-radius: 12px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.05);
            max-width: 720px;
            width: 100%;
        }

        .search-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1.2rem;
            color: #1a2e4f;
            text-align: center;
        }

        .filter-options {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .filter-options label {
            font-size: 0.95rem;
            color: #4e4a45;
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }

        .filter-options input[type="radio"] {
            accent-color: #b2903e;
        }

        .input-group {
            display: flex;
            align-items: center;
            border: 1px solid #d8d2c4;
            border-radius: 6px;
            overflow: hidden;
        }

        .input-group input {
            flex: 1;
            border: none;
            padding: 0.75rem 1rem;
            font-size: 1rem;
        }

        .input-group input:focus {
            outline: none;
        }

        .search-btn {
            background-color: #b2903e;
            border: none;
            color: white;
            padding: 0.75rem 1rem;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .search-btn:hover {
            background-color: #967a2b;
        }

        .domain-entry {
            background: #fff;
            border-left: 4px solid #b2903e;
            margin-bottom: 1.5rem;
            padding: 1rem 1.5rem;
            border-radius: 4px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
        }

        .domain-name {
            font-size: 1.5rem;
            font-weight: bold;
            color: #1a2e4f;
        }

        .sections-list {
            margin-top: 0.5rem;
        }

        .section-item {
            margin-left: 2rem;
            padding: 0.3rem 0;
        }

        .section-link {
            text-decoration: none;
            color: #4e4a45;
        }

        .section-link i {
            color: #b2903e;
        }

        .search-results-title {
            font-size: 1.4rem;
            margin-bottom: 1.5rem;
            color: #1a2e4f;
        }

        .text-center.w-100 {
            font-family: 'Georgia', serif;
            font-size: 1.2rem;
            color: #7a6b52;
        }

        .btn-outline-secondary {
            border-color: #b2903e;
            color: #1a2e4f;
        }

        .btn-outline-secondary:hover {
            background-color: #b2903e;
            color: #fff;
        }

        .form-control {
            border: 1px solid #d8d2c4;
        }
    </style>
{% endblock %}

{% block body %}
    {% block content %}
    <div class="page-header">UIASS BIBLIOTHÈQUE</div>

    <div class="search-wrapper">
        <div class="search-box">
            <h2 class="search-title">Recherche avancée</h2>
            <div class="filter-options">
                <label><input type="radio" name="searchFilter" id="filterAll" value="all" checked> Tous</label>
                <label><input type="radio" name="searchFilter" id="filterDomain" value="domain"> Domaine</label>
                <label><input type="radio" name="searchFilter" id="filterBook" value="book"> Livre</label>
                <label><input type="radio" name="searchFilter" id="filterAuthor" value="author"> Auteur</label>
            </div>
            <div class="input-group">
                <input type="text" id="search-input" placeholder="Ex. : Chimie, mathématiques..." class="form-control">
                <button id="search-button" class="search-btn" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>

    <div id="search-results" class="search-results">
        <h2 class="search-results-title"></h2>
        <div id="domains-results" class="mb-4"></div>
        <div id="sections-results" class="mb-4"></div>
        <div id="books-results" class="mb-4"></div>
        <div id="authors-results" class="mb-4"></div>
    </div>

    {% if domains is empty %}
        <div class="text-center w-100">
            <p>Aucun domaine trouvé.</p>
        </div>
    {% else %}
        {% for domain in domains %}
            <div class="domain-entry">
                <div class="domain-name">{{ domain.name }}</div>
                <div class="sections-list">
                    {% for section in domain.sections %}
                        <div class="section-item">
                            <a href="{{ path('section_books', {'id': section.id}) }}" class="section-link">
                                <i class="fas fa-folder-open me-1"></i> {{ section.name }}
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    {% endif %}
    {% endblock %}
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-input');
    const searchButton = document.getElementById('search-button');

    function performSearch() {
        const searchTerm = searchInput.value.trim();
        if (searchTerm.length < 2) {
            return;
        }
        const selectedFilter = document.querySelector('input[name="searchFilter"]:checked').value;
        window.location.href = `/domains/search?q=${encodeURIComponent(searchTerm)}&filter=${selectedFilter}`;
    }

    searchButton.addEventListener('click', performSearch);
    searchInput.addEventListener('keyup', function(event) {
        if (event.key === 'Enter') {
            performSearch();
        }
    });
});
</script>
{% endblock %}
