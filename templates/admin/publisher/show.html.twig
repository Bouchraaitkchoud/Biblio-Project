{% extends 'base.html.twig' %}

{% block title %}Admin - Publisher Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="admin-nav">
            <div class="admin-nav-links">
                <a href="{{ path('admin_dashboard') }}" class="admin-nav-link">Dashboard</a>
                <a href="{{ path('admin_orders_index') }}" class="admin-nav-link">Orders</a>
                <a href="{{ path('admin_domains_index') }}" class="admin-nav-link">Domains</a>
                <a href="{{ path('admin_sections_index') }}" class="admin-nav-link">Sections</a>
                <a href="{{ path('admin_authors_index') }}" class="admin-nav-link">Authors</a>
                <a href="{{ path('admin_publishers_index') }}" class="admin-nav-link active">Publishers</a>
                <a href="{{ path('admin_books_index') }}" class="admin-nav-link">Books</a>
                <a href="{{ path('app_domains') }}" class="admin-nav-link">Main Site</a>
            </div>
            <div class="admin-user-info">
                Welcome, Admin | <a href="{{ path('app_logout') }}" style="color: white;">Logout</a>
            </div>
        </div>
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="page-header">
            <h1>Publisher Details</h1>
            <div>
                <a href="{{ path('admin_publisher_edit', {'id': publisher.id}) }}" class="btn btn-edit">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a href="{{ path('admin_publishers_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3>Publisher Information</h3>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th style="width: 30%">ID</th>
                                    <td>{{ publisher.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ publisher.name }}</td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>{{ publisher.address|default('Not specified') }}</td>
                                </tr>
                                <tr>
                                    <th>City</th>
                                    <td>{{ publisher.city|default('Not specified') }}</td>
                                </tr>
                                <tr>
                                    <th>Country</th>
                                    <td>{{ publisher.country|default('Not specified') }}</td>
                                </tr>
                                <tr>
                                    <th>Website</th>
                                    <td>
                                        {% if publisher.website %}
                                            <a href="{{ publisher.website }}" target="_blank">{{ publisher.website }}</a>
                                        {% else %}
                                            Not specified
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                {% if publisher.comment %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h3>Comments</h3>
                    </div>
                    <div class="card-body">
                        <p>{{ publisher.comment|nl2br }}</p>
                    </div>
                </div>
                {% endif %}
            </div>
            
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3>Books ({{ publisher.books|length }})</h3>
                        <a href="{{ path('admin_books_index') }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-book"></i> Manage Books
                        </a>
                    </div>
                    <div class="card-body">
                        {% if publisher.books|length > 0 %}
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Title</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for book in publisher.books %}
                                            <tr>
                                                <td>{{ book.id }}</td>
                                                <td>{{ book.title }}</td>
                                                <td>
                                                    <a href="{{ path('admin_books_show', {'id': book.id}) }}" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <p class="text-muted">No books associated with this publisher.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mt-4 d-flex justify-content-between">
            <form method="post" action="{{ path('admin_publisher_delete', {'id': publisher.id}) }}" onsubmit="return confirm('Are you sure you want to delete this publisher?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publisher.id) }}">
                <button class="btn btn-danger" {% if publisher.books is not empty %}disabled title="Cannot delete publisher with books"{% endif %}>
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>
            
            <div>
                <a href="{{ path('admin_publisher_edit', {'id': publisher.id}) }}" class="btn btn-edit">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a href="{{ path('admin_publishers_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
{% endblock %} 