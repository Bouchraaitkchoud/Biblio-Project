{% extends 'admin/layout.html.twig' %}

{% block title %}Admin - Détails de l'Éditeur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #fdfaf5 !important;
            font-family: 'Georgia', serif;
            color: #4e4a45;
            min-height: 100vh;
        }
        .page-header {
            font-size: 2.2rem;
            font-weight: bold;
            margin: 2rem 0 1.5rem 0;
            color: #1a2e4f;
        }
        .publisher-detail-card {
            background: #fff;
            border-left: 4px solid #b2903e;
            margin-bottom: 2rem;
            padding: 2rem 2.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
        }
        .publisher-name {
            font-size: 1.5rem;
            font-weight: bold;
            color: #1a2e4f;
            margin-bottom: 0.5rem;
        }
        .publisher-meta {
            color: #7a6b52;
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }
        .publisher-info-table {
            margin-bottom: 1.5rem;
        }
        .publisher-info-table th {
            width: 30%;
            color: #7a6b52;
            font-weight: normal;
        }
        .btn-primary {
            background: #1a2e4f;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            transition: background 0.2s;
        }
        .btn-primary:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-edit {
            background: #f7e7c1;
            color: #b2903e;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            margin-right: 0.5rem;
        }
        .btn-edit:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-delete {
            background: #f8d7da;
            color: #dc3545;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
        }
        .btn-delete:hover {
            background: #dc3545;
            color: #fff;
        }
        .btn-group {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }
        .back-link {
            margin-top: 1.5rem;
            display: inline-block;
        }
        .count-badge {
            font-weight: normal;
            font-size: 0.95rem;
            color: #7a6b52;
        }
        .alert {
            border-radius: 8px;
        }
        .books-list {
            margin-bottom: 1.5rem;
        }
        .books-list li {
            margin-bottom: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="page-header">Détails de l'Éditeur</div>

        <div class="publisher-detail-card">
            <div class="publisher-name">{{ publisher.name }}</div>
            <div class="publisher-meta">
                {% if publisher.city or publisher.country %}
                    {{ [publisher.city, publisher.country]|filter(v => v)|join(', ') }}
                {% else %}
                    <span class="text-muted">Emplacement non spécifié</span>
                {% endif %}
            </div>
            <div class="btn-group">
                <a href="{{ path('admin_publisher_edit', {'id': publisher.id}) }}" class="btn btn-edit" title="Modifier l'éditeur">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <form method="post" action="{{ path('admin_publisher_delete', {'id': publisher.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet éditeur ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publisher.id) }}">
                    <button class="btn btn-delete" title="Supprimer l'éditeur" {% if publisher.books is not empty %}disabled title="Impossible de supprimer un éditeur avec des livres"{% endif %}>
                        <i class="fas fa-trash-alt"></i> Supprimer
                    </button>
                </form>
            </div>
            <table class="table publisher-info-table">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ publisher.id }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ publisher.address|default('Non spécifiée') }}</td>
                    </tr>
                    <tr>
                        <th>Site Web</th>
                        <td>
                            {% if publisher.website %}
                                <a href="{{ publisher.website }}" target="_blank">{{ publisher.website }}</a>
                            {% else %}
                                Non spécifié
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Commentaires</th>
                        <td>{{ publisher.comment|default('Aucun commentaire')|nl2br }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="books-list">
                <strong>Livres ({{ publisher.books|length }}) :</strong>
                {% if publisher.books|length > 0 %}
                    <ul>
                        {% for book in publisher.books %}
                            <li>
                                <a href="{{ path('admin_books_show', {'id': book.id}) }}">{{ book.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="text-muted">Aucun livre associé à cet éditeur.</div>
                {% endif %}
            </div>
            <a href="{{ path('admin_publishers_index') }}" class="btn btn-primary back-link">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}