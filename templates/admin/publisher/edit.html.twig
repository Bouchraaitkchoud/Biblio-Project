{% extends 'admin/layout.html.twig' %}

{% block title %}Modifier l'éditeur{% endblock %}

{% block admin_content %}
    <div class="page-header" style="margin-bottom: 1.5rem;">
        Modifier l'éditeur
    </div>
    <div class="form-container mt-4">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.name) }}
                </div>
            </div>
            <div class="form-actions mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer les modifications
                </button>
                <a href="{{ path('admin_publishers_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour aux éditeurs
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}