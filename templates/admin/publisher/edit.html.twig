{% extends 'base.html.twig' %}

{% block title %}Admin - Edit Publisher{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #fdfaf5 !important;
            font-family: 'Georgia', serif;
            color: #4e4a45;
            min-height: 100vh;
        }
        .page-header {
            font-size: 2.2rem;
            font-weight: bold;
            margin: 2rem 0 1.5rem 0;
            color: #1a2e4f;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .form-container {
            background: #fff;
            border-left: 4px solid #b2903e;
            margin-bottom: 2rem;
            padding: 2rem 2.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
        }
        .btn-primary {
            background: #1a2e4f;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            transition: background 0.2s;
        }
        .btn-primary:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-edit {
            background: #f7e7c1;
            color: #b2903e;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            margin-right: 0.5rem;
        }
        .btn-edit:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-secondary {
            background: #6c757d;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
        }
        .btn-secondary:hover {
            background: #b2903e;
            color: #fff;
        }
        .back-link {
            margin-top: 1.5rem;
            display: inline-block;
        }
        .alert {
            border-radius: 8px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="page-header">
            <span>Edit Publisher: {{ publisher.name }}</span>
            <div>
                <a href="{{ path('admin_publisher_show', {'id': publisher.id}) }}" class="btn btn-primary">
                    <i class="fas fa-eye"></i> View Details
                </a>
                <a href="{{ path('admin_publishers_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>

        <div class="form-container">
            <form method="post" action="{{ path('admin_publisher_edit', {'id': publisher.id}) }}">
                <div class="mb-3">
                    <label for="name" class="form-label required">Publisher Name</label>
                    <input type="text" id="name" name="name" class="form-control" value="{{ publisher.name }}" required>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" id="address" name="address" class="form-control" value="{{ publisher.address }}">
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="city" class="form-label">City</label>
                        <input type="text" id="city" name="city" class="form-control" value="{{ publisher.city }}">
                    </div>
                    <div class="col-md-6">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" id="country" name="country" class="form-control" value="{{ publisher.country }}">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="website" class="form-label">Website</label>
                    <input type="url" id="website" name="website" class="form-control" placeholder="https://..." value="{{ publisher.website }}">
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea id="comment" name="comment" class="form-control" rows="4">{{ publisher.comment }}</textarea>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="{{ path('admin_publishers_index') }}" class="btn btn-secondary me-md-2">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Publisher
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %} 