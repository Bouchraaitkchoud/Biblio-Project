{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
    <style>
        .dashboard-container {
            padding: 20px;
        }
        .dashboard-header {
            margin-bottom: 25px;
            color: #117986;
            border-bottom: 2px solid #117986;
            padding-bottom: 10px;
        }
        .admin-nav {
            background-color: #117986;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 25px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .admin-nav-links {
            display: flex;
            gap: 20px;
        }
        .admin-nav-link {
            color: white;
            text-decoration: none;
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        .admin-nav-link:hover, .admin-nav-link.active {
            background-color: rgba(255,255,255,0.2);
        }
        .admin-user-info {
            color: white;
        }
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            padding: 20px;
            transition: all 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.15);
        }
        .stat-card .value {
            font-size: 2em;
            font-weight: bold;
            color: #117986;
        }
        .stat-card .label {
            color: #6c757d;
            font-size: 0.9em;
            margin-top: 5px;
        }
        .section {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            padding: 20px;
            margin-bottom: 30px;
        }
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            color: #117986;
            border-bottom: 1px solid #e9ecef;
            padding-bottom: 10px;
        }
        .section-header .view-all {
            color: #117986;
            font-size: 0.9em;
            text-decoration: none;
        }
        .order-card {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            margin-bottom: 15px;
            background-color: #f8f9fa;
            border-left: 4px solid #117986;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        .order-card:hover {
            transform: translateX(5px);
            background-color: #e9ecef;
        }
        .order-info {
            flex: 2;
        }
        .order-id {
            font-weight: bold;
            color: #117986;
        }
        .order-date {
            color: #6c757d;
            font-size: 0.8em;
        }
        .order-user {
            color: #495057;
            margin-top: 5px;
        }
        .order-status {
            flex: 1;
            text-align: center;
            font-weight: bold;
        }
        .status-pending {
            color: #fd7e14;
        }
        .status-approved {
            color: #28a745;
        }
        .status-rejected {
            color: #dc3545;
        }
        .order-action {
            flex: 1;
            text-align: right;
        }
        .btn-view {
            background-color: #117986;
            color: white;
            border: none;
            padding: 5px 15px;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }
        .btn-view:hover {
            background-color: #0e6655;
            transform: translateY(-2px);
        }
        .no-orders {
            text-align: center;
            padding: 40px 20px;
            color: #6c757d;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container dashboard-container">
        <div class="admin-nav">
            <div class="admin-nav-links">
                <a href="{{ path('admin_dashboard') }}" class="admin-nav-link active">Dashboard</a>
                <a href="{{ path('admin_orders_index') }}" class="admin-nav-link">Orders</a>
                <a href="{{ path('app_domains') }}" class="admin-nav-link">Main Site</a>
            </div>
            <div class="admin-user-info">
                Welcome, Admin | <a href="{{ path('app_logout') }}" style="color: white;">Logout</a>
            </div>
        </div>
        
        <h1 class="dashboard-header">Admin Dashboard</h1>
        
        <!-- Stats Overview -->
        <div class="stats-container">
            <div class="stat-card">
                <div class="value">{{ pendingOrdersCount }}</div>
                <div class="label">Pending Orders</div>
            </div>
            <!-- You can add more stat cards here -->
        </div>
        
        <!-- Pending Orders Section -->
        <div class="section">
            <div class="section-header">
                <h2>Pending Orders</h2>
                <a href="{{ path('admin_orders_index') }}" class="view-all">View All</a>
            </div>
            
            {% if pendingCarts is empty %}
                <div class="no-orders">
                    <p>No pending orders at this time.</p>
                </div>
            {% else %}
                {% for cart in pendingCarts %}
                    <div class="order-card">
                        <div class="order-info">
                            <div class="order-id">Order #{{ cart.id }}</div>
                            <div class="order-date">{{ cart.createdAt|date('Y-m-d H:i') }}</div>
                            <div class="order-user">{{ cart.user.email }}</div>
                        </div>
                        <div class="order-status status-pending">PENDING</div>
                        <div class="order-action">
                            <a href="{{ path('admin_orders_index') }}" class="btn-view">View</a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        
        <!-- Recent Orders Section -->
        <div class="section">
            <div class="section-header">
                <h2>Recent Orders</h2>
            </div>
            
            {% if recentCarts is empty %}
                <div class="no-orders">
                    <p>No orders yet.</p>
                </div>
            {% else %}
                {% for cart in recentCarts %}
                    <div class="order-card">
                        <div class="order-info">
                            <div class="order-id">Order #{{ cart.id }}</div>
                            <div class="order-date">{{ cart.createdAt|date('Y-m-d H:i') }}</div>
                            <div class="order-user">{{ cart.user.email }}</div>
                        </div>
                        <div class="order-status 
                            {% if cart.status == 'pending' %}status-pending{% endif %}
                            {% if cart.status == 'approved' %}status-approved{% endif %}
                            {% if cart.status == 'rejected' %}status-rejected{% endif %}">
                            {{ cart.status|upper }}
                        </div>
                        <div class="order-action">
                            <a href="{{ path('admin_orders_index') }}" class="btn-view">View</a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %} 