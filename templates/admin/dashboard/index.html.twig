{% block content %}
    <div class="container dashboard-container">
        <h1 class="dashboard-header">Administration</h1>
        <!-- Library Management Section -->
        <div class="admin-management">
            <div class="management-card">
                <div class="management-icon">
                    <i class="fas fa-sitemap"></i>
                </div>
                <div class="management-title">Manage Disciplines</div>
                <div class="management-description">
                    Create, edit, and delete library disciplines
                </div>
                <a href="{{ path('admin_disciplines_index') }}" class="btn-manage">Manage Disciplines</a>
            </div>
            
            <div class="management-card">
                <div class="management-icon">
                    <i class="fas fa-user-edit"></i>
                </div>
                <div class="management-title">Manage Authors</div>
                <div class="management-description">
                    Add and manage book authors
                </div>
                <a href="{{ path('admin_authors_index') }}" class="btn-manage">Manage Authors</a>
            </div>
            
            <div class="management-card">
                <div class="management-icon">
                    <i class="fas fa-building"></i>
                </div>
                <div class="management-title">Manage Publishers</div>
                <div class="management-description">
                    Add and manage book publishers
                </div>
                <a href="{{ path('admin_publishers_index') }}" class="btn-manage">Manage Publishers</a>
            </div>
            
            <div class="management-card">
                <div class="management-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="management-title">Manage Books</div>
                <div class="management-description">
                    Add, edit, and manage all books in the library
                </div>
                <a href="{{ path('admin_books_index') }}" class="btn-manage">Manage Books</a>
            </div>
            <div class="management-card">
                <div class="management-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="management-title">Manage Orders</div>
                <div class="management-description">
                    View and manage all orders
                </div>
                <a href="{{ path('admin_orders_index') }}" class="btn-manage">Manage Orders</a>
            </div>
            <div class="management-card">
                <div class="management-icon">
                    <i class="fas fa-undo"></i>
                </div>
                <div class="management-title">Manage Returns</div>
                <div class="management-description">
                    View and manage all returns
                </div>
                <a href="{{ path('admin_returns_index') }}" class="btn-manage">Manage Returns</a>
            </div>
        </div>

        <!-- Recent Orders Section -->
        <div class="section">
            <div class="section-header">
                <h2>Recent Orders</h2>
                <a href="{{ path('admin_orders_index') }}" class="view-all">View All Orders</a>
            </div>
            
            {% if recent_orders|length > 0 %}
                {% for order in recent_orders %}
                    <div class="order-card">
                        <div class="order-info">
                            <div class="order-id">Order #{{ order.id }}</div>
                            <div class="order-date">{{ order.createdAt|date('M d, Y H:i') }}</div>
                            <div class="order-user">{{ order.user.email }}</div>
                        </div>
                        <div class="order-status status-{{ order.status|lower }}">
                            {{ order.status }}
                        </div>
                        <div class="order-action">
                            <a href="{{ path('admin_orders_index') }}" class="btn-view">View Details</a>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="no-orders">
                    <i class="fas fa-inbox fa-3x mb-3"></i>
                    <p>No recent orders found</p>
                </div>
            {% endif %}
        </div>

        <!-- Statistics Section -->
        <div class="stats-container">
            <div class="stat-card">
                <div class="value">{{ total_books }}</div>
                <div class="label">Total Books</div>
            </div>
            <div class="stat-card">
                <div class="value">{{ total_orders }}</div>
                <div class="label">Total Orders</div>
            </div>
            <div class="stat-card">
                <div class="value">{{ total_users }}</div>
                <div class="label">Total Users</div>
            </div>
            <div class="stat-card">
                <div class="value">{{ total_disciplines }}</div>
                <div class="label">Total Disciplines</div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Force proper layout reset on dashboard load
        function resetDashboardLayout() {
            // Add specific classes to body
            document.body.classList.add('admin-page', 'dashboard-page');
            
            // Force the header to stay left-aligned
            const dashboardHeader = document.querySelector('.dashboard-header');
            if (dashboardHeader) {
                dashboardHeader.style.textAlign = 'left';
                dashboardHeader.style.display = 'block';
                dashboardHeader.style.width = '100%';
                dashboardHeader.style.fontFamily = "'Georgia', serif";
            }
            
            // Force proper container styling
            const dashboardContainer = document.querySelector('.dashboard-container');
            if (dashboardContainer) {
                dashboardContainer.style.marginLeft = '0';
                dashboardContainer.style.marginRight = '0';
                dashboardContainer.style.marginTop = '0';
                dashboardContainer.style.padding = '20px';
                dashboardContainer.style.maxWidth = 'none';
                dashboardContainer.style.textAlign = 'left';
            }
            
            // Force cards to stay centered
            const managementCards = document.querySelectorAll('.management-card');
            managementCards.forEach(card => {
                card.style.textAlign = 'center';
                card.style.fontFamily = "'Georgia', serif";
            });
            
            // Force management grid to stay stable
            const adminManagement = document.querySelector('.admin-management');
            if (adminManagement) {
                adminManagement.style.display = 'grid';
                adminManagement.style.gridTemplateColumns = 'repeat(auto-fit, minmax(300px, 1fr))';
                adminManagement.style.gap = '20px';
                adminManagement.style.width = '100%';
            }
            
            const mainContent = document.querySelector('.dashboard-main-content');
            if (mainContent) {
                mainContent.style.marginLeft = '250px';
                mainContent.style.width = 'calc(100% - 250px)';
                mainContent.style.padding = '30px 30px 30px 0';
                mainContent.style.boxSizing = 'border-box';
            }
            
            // Remove any admin-content-wrapper that might interfere
            const adminWrapper = document.querySelector('.admin-content-wrapper');
            if (adminWrapper && adminWrapper.parentNode) {
                // Move children out of wrapper if it exists
                while (adminWrapper.firstChild) {
                    adminWrapper.parentNode.insertBefore(adminWrapper.firstChild, adminWrapper);
                }
                adminWrapper.remove();
            }
            
            // Force layout recalculation
            document.body.style.display = 'none';
            document.body.offsetHeight; // Trigger reflow
            document.body.style.display = '';
        }
        
        // Run on page load
        document.addEventListener('DOMContentLoaded', resetDashboardLayout);
        
        // Run on Turbo navigation
        document.addEventListener('turbo:load', resetDashboardLayout);
        
        // Run after a short delay to catch any late-loading styles
        document.addEventListener('turbo:load', function() {
            setTimeout(resetDashboardLayout, 50);
        });
        
        // Reset on page focus (when returning from other tabs)
        window.addEventListener('focus', function() {
            setTimeout(resetDashboardLayout, 10);
        });
    </script>
{% endblock %}