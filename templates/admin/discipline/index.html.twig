{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des Disciplines{% endblock %}

{% block admin_content %}
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Gestion des Disciplines</h1>
                <a href="{{ path('admin_disciplines_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Ajouter une discipline
                </a>
            </div>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Nombre de livres</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for discipline in disciplines %}
                            <tr>
                                <td>{{ discipline.id }}</td>
                                <td>{{ discipline.name }}</td>
                                <td>{{ discipline.books|length }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('admin_disciplines_show', {'id': discipline.id}) }}" 
                                           class="btn btn-info btn-sm" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_disciplines_edit', {'id': discipline.id}) }}" 
                                           class="btn btn-warning btn-sm" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        {% if discipline.books|length == 0 %}
                                            <button type="button" class="btn btn-danger btn-sm" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal{{ discipline.id }}"
                                                    title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        {% else %}
                                            <button type="button" class="btn btn-secondary btn-sm" 
                                                    disabled 
                                                    title="Impossible de supprimer: contient des livres">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        {% endif %}
                                    </div>

                                    <!-- Delete Modal -->
                                    {% if discipline.books|length == 0 %}
                                    <div class="modal fade" id="deleteModal{{ discipline.id }}" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirmer la suppression</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Êtes-vous sûr de vouloir supprimer la discipline "<strong>{{ discipline.name }}</strong>" ?
                                                    Cette action est irréversible.
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                    <form method="post" action="{{ path('admin_disciplines_delete', {'id': discipline.id}) }}" style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discipline.id) }}">
                                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center">Aucune discipline trouvée</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
{% endblock %}
