{% extends 'base.html.twig' %}

{% block title %}Ajouter une Discipline{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>Ajouter une nouvelle discipline</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.image) }}
                            {{ form_widget(form.image) }}
                            {{ form_errors(form.image) }}
                            <small class="form-text text-muted">{{ form_help(form.image) }}</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_disciplines_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour Ã  la liste
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}