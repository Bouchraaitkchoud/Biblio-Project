{% extends 'admin/layout.html.twig' %}

{% block title %}Modifier la Discipline{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>Modifier la discipline: {{ discipline.name }}</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.image) }}
                            {% if discipline.image %}
                                <div class="current-image mb-2">
                                    <label class="form-label">Image actuelle :</label><br>
                                    <img src="{{ asset('images/disciplines/' ~ discipline.image) }}" 
                                         alt="Image de {{ discipline.name }}" 
                                         style="max-width: 150px; max-height: 100px; border-radius: 8px; border: 1px solid #ddd;">
                                    <small class="text-muted d-block">{{ discipline.image }}</small>
                                </div>
                            {% endif %}
                            {{ form_widget(form.image) }}
                            {{ form_errors(form.image) }}
                            <small class="form-text text-muted">{{ form_help(form.image) }}</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_disciplines_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour Ã  la liste
                            </a>
                            <div>
                                <a href="{{ path('admin_disciplines_show', {'id': discipline.id}) }}" class="btn btn-info me-2">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Enregistrer les modifications
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}