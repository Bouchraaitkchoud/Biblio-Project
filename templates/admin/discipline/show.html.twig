                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            {% if discipline.books|length == 0 %}
                                <button type="button" class="btn btn-danger" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            {% else %}
                                <button type="button" class="btn btn-secondary" 
                                        disabled 
                                        title="Impossible de supprimer: contient des livres">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% if discipline.books|length == 0 %}
<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                √ätes-vous s√ªr de vouloir supprimer la discipline "<strong>{{ discipline.name }}</strong>" ?
                Cette action est irr√©versible.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('admin_disciplines_delete', {'id': discipline.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discipline.id) }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}