                                            {% elseif 'droit' in disciplineName or 'law' in disciplineName %}
                                                ‚öñÔ∏è
                                            {% elseif 'medecine' in disciplineName or 'medicine' in disciplineName %}
                                                üè•
                                            {% elseif 'art' in disciplineName %}
                                                üé®
                                            {% elseif 'musique' in disciplineName or 'music' in disciplineName %}
                                                üéµ
                                            {% elseif 'sport' in disciplineName %}
                                                ‚öΩ
                                            {% elseif 'langue' in disciplineName or 'language' in disciplineName %}
                                                üó£Ô∏è
                                            {% else %}
                                                üìñ
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {% if discipline.books|length > 0 %}
                    <div class="mt-4">
                        <h4>Livres dans cette discipline</h4>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Titre</th>
                                        <th>Auteur(s)</th>
                                        <th>√âditeur</th>
                                        <th>Ann√©e</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for book in discipline.books %}
                                    <tr>
                                        <td>{{ book.title }}</td>
                                        <td>{{ book.authorName }}</td>
                                        <td>{{ book.publisherName ?: 'Non d√©fini' }}</td>
                                        <td>{{ book.publicationYear }}</td>
                                        <td>
                                            <a href="{{ path('admin_books_show', {'id': book.id}) }}" 
                                               class="btn btn-info btn-sm" title="Voir le livre">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    {% else %}
                    <div class="alert alert-info mt-4">
                        <i class="fas fa-info-circle"></i> Aucun livre n'est associ√© √† cette discipline pour le moment.
                    </div>
