                            </table>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center">
                                <h5>Aper√ßu de la discipline</h5>
                                {% if discipline.image %}
                                    <img src="{{ asset('images/disciplines/' ~ discipline.image) }}" 
                                         alt="Image de {{ discipline.name }}" 
                                         style="width: 200px; height: 150px; object-fit: cover; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                                {% else %}
                                    <div style="width: 200px; height: 150px; background: linear-gradient(135deg, #b2903e, #1a2e4f); border-radius: 10px; display: flex; align-items: center; justify-content: center; margin: 0 auto; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                                        <div style="font-size: 3rem; color: white;">
                                            {% set disciplineName = discipline.name|lower %}
                                            {% if 'informatique' in disciplineName or 'computer' in disciplineName %}
                                                üíª
                                            {% elseif 'mathematiques' in disciplineName or 'math' in disciplineName %}
                                                üìä
                                            {% elseif 'physique' in disciplineName or 'physics' in disciplineName %}
                                                ‚öõÔ∏è
                                            {% elseif 'chimie' in disciplineName or 'chemistry' in disciplineName %}
                                                üß™
                                            {% elseif 'biologie' in disciplineName or 'biology' in disciplineName %}
                                                üß¨
                                            {% elseif 'histoire' in disciplineName or 'history' in disciplineName %}
                                                üìú
                                            {% elseif 'geographie' in disciplineName or 'geography' in disciplineName %}
                                                üåç
                                            {% elseif 'litterature' in disciplineName or 'literature' in disciplineName %}
                                                üìö
                                            {% elseif 'philosophie' in disciplineName or 'philosophy' in disciplineName %}
                                                üí≠
                                            {% elseif 'economie' in disciplineName or 'economics' in disciplineName %}
                                                üí∞
                                            {% elseif 'psychologie' in disciplineName or 'psychology' in disciplineName %}
