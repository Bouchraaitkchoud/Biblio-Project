{% extends 'admin/layout.html.twig' %}

{% block title %}Admin - Gestion des Auteurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block admin_content %}
    <div class="page-header">
        <span>Gestion des Auteurs</span>
        <div>
            <a href="{{ path('admin_author_export_csv') }}" class="btn btn-success me-2">
                <i class="fas fa-file-csv"></i> Exporter CSV
            </a>
            <a href="{{ path('admin_author_new') }}" class="btn btn-add">
                <i class="fas fa-plus"></i> Ajouter un nouvel auteur
            </a>
        </div>
    </div>
    
    <form class="admin-search-form" method="get" action="{{ path('admin_authors_index') }}">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Rechercher par nom d'auteur..." value="{{ searchTerm }}">
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search"></i> Rechercher
            </button>
        </div>
        {% if searchTerm %}
            <a href="{{ path('admin_authors_index') }}" class="btn btn-secondary">
                <i class="fas fa-times"></i> Effacer
            </a>
        {% endif %}
    </form>
    
    {% if pagination.totalItems == 0 %}
        <div class="no-items">
            <h3>Aucun auteur trouvé</h3>
            <p class="text-muted">
                {% if searchTerm %}
                    Aucun résultat pour "{{ searchTerm }}". Essayez un autre terme de recherche.
                {% else %}
                    Commencez par ajouter votre premier auteur.
                {% endif %}
            </p>
            <a href="{{ path('admin_author_new') }}" class="btn btn-add mt-3">
                <i class="fas fa-plus"></i> Ajouter un nouvel auteur
            </a>
        </div>
    {% else %}
        {% for author in authors %}
            <div class="author-entry">
                <div class="author-info">
                    <div class="author-name">{{ author.name }}</div>
                    <div class="author-books">Livres : {{ author.books|length }}</div>
                </div>
                <div class="author-actions">
                    <a href="{{ path('admin_author_show', {'id': author.id}) }}" class="btn btn-sm btn-primary" title="Voir les détails">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ path('admin_author_edit', {'id': author.id}) }}" class="btn btn-sm btn-edit" title="Modifier l'auteur">
                        <i class="fas fa-edit"></i>
                    </a>
                    {% if author.books|length == 0 %}
                        <form method="post" action="{{ path('admin_author_delete', {'id': author.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet auteur ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
                            <button class="btn btn-sm btn-delete" title="Supprimer l'auteur">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    {% else %}
                        <button class="btn btn-sm btn-secondary" disabled title="Impossible de supprimer: cet auteur a des livres associés" style="background-color: #6c757d; border-color: #6c757d; color: white; cursor: not-allowed;">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <small class="text-muted">
                    Affichage de {{ authors|length }} sur {{ pagination.totalItems }} auteurs
                </small>
            </div>
            
            {% if pagination.totalPages > 1 %}
                <nav aria-label="Pagination">
                    <ul class="pagination">
                        {% if pagination.currentPage > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('admin_authors_index', {page: pagination.currentPage - 1, search: searchTerm}) }}">Précédent</a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <span class="page-link">Précédent</span>
                            </li>
                        {% endif %}
                        
                        {% for i in max(1, pagination.currentPage - 2)..min(pagination.totalPages, pagination.currentPage + 2) %}
                            <li class="page-item {{ i == pagination.currentPage ? 'active' }}">
                                <a class="page-link" href="{{ path('admin_authors_index', {page: i, search: searchTerm}) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                        
                        {% if pagination.currentPage < pagination.totalPages %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('admin_authors_index', {page: pagination.currentPage + 1, search: searchTerm}) }}">Suivant</a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <span class="page-link">Suivant</span>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
