{% extends 'admin/layout.html.twig' %}

{% block title %}Admin - Détails de l'Auteur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #fdfaf5 !important;
            font-family: 'Georgia', serif;
            color: #4e4a45;
            min-height: 100vh;
        }
        .page-header {
            font-size: 2.2rem;
            font-weight: bold;
            margin: 2rem 0 1.5rem 0;
            color: #1a2e4f;
        }
        .author-detail-card {
            background: #fff;
            border-left: 4px solid #b2903e;
            margin-bottom: 2rem;
            padding: 2rem 2.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
        }
        .author-name {
            font-size: 1.5rem;
            font-weight: bold;
            color: #1a2e4f;
            margin-bottom: 0.5rem;
        }
        .author-bio {
            color: #7a6b52;
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }
        .books-list {
            margin-bottom: 1.5rem;
        }
        .books-list li {
            margin-bottom: 0.5rem;
        }
        .btn-primary {
            background: #1a2e4f;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            transition: background 0.2s;
        }
        .btn-primary:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-edit {
            background: #f7e7c1;
            color: #b2903e;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            margin-right: 0.5rem;
        }
        .btn-edit:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-delete {
            background: #f8d7da;
            color: #dc3545;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
        }
        .btn-delete:hover {
            background: #dc3545;
            color: #fff;
        }
        .btn-group {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }
        .back-link {
            margin-top: 1.5rem;
            display: inline-block;
        }
        .count-badge {
            font-weight: normal;
            font-size: 0.95rem;
            color: #7a6b52;
        }
        .alert {
            border-radius: 8px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="page-header">Détails de l'Auteur</div>

        <div class="author-detail-card">
            <div class="author-name">{{ author.name }}</div>

            <div class="btn-group">
                <a href="{{ path('admin_author_edit', {'id': author.id}) }}" class="btn btn-edit" title="Modifier l'auteur">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <button type="button" class="btn btn-delete" data-bs-toggle="modal" data-bs-target="#deleteModal" title="Supprimer l'auteur">
                    <i class="fas fa-trash-alt"></i> Supprimer
                </button>
            </div>
        
            <div class="books-list">
                <strong>Livres de cet auteur ({{ author.books|length }}) :</strong>
                {% if author.books|length > 0 %}
                    <ul>
                        {% for book in author.books %}
                            <li>
                                <a href="{{ path('book_show', {'id': book.id}) }}">{{ book.title }}</a>
                                <span class="count-badge">({{ book.disciplines|map(d => d.name)|join(', ')|default('Aucune discipline') }})</span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="text-muted">Aucun livre trouvé pour cet auteur.</div>
                {% endif %}
            </div>
            
            <a href="{{ path('admin_authors_index') }}" class="btn btn-primary back-link">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
    
    <!-- Modal de suppression -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmer la suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer l'auteur "{{ author.name }}" ?
                    {% if author.books|length > 0 %}
                        <div class="alert alert-warning mt-3">
                            <strong>Attention :</strong> Cet auteur possède {{ author.books|length }} livre(s). La suppression peut affecter ces livres.
                        </div>
                    {% endif %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form method="post" action="{{ path('admin_author_delete', {'id': author.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}