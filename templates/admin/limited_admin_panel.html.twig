<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel Administrateur</title>
    
    <!-- Bootstrap CSS -->
    <link href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="{{ asset('assets/fontawesome/css/all.min.css') }}">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html, body {
            height: 100%;
            width: 100%;
            overflow-x: hidden;
            margin: 0;
            padding: 0;
        }
        
        body {
            background: linear-gradient(135deg, #fdfaf5 0%, #f8f5f0 100%);
            font-family: 'Georgia', serif;
            padding: 2rem;
            min-height: 100vh;
        }

        .limited-panel-container {
            max-width: 900px;
            width: 100%;
            padding: 2rem;
            margin: 0 auto;
        }

        .panel-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .panel-header h1 {
            font-size: 2.5rem;
            color: #1a2e4f;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .panel-header p {
            color: #666;
            font-size: 1.1rem;
        }

        .management-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .management-item {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            border-left: 5px solid #3365b7;
            text-decoration: none;
            display: block;
        }

        .management-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .management-item .icon {
            font-size: 3rem;
            color: #1a2e4f;
            margin-bottom: 1rem;
        }

        .management-item .title {
            font-size: 1.3rem;
            font-weight: bold;
            color: #1a2e4f;
            margin-bottom: 0.5rem;
        }

        .management-item .description {
            color: #666;
            font-size: 0.9rem;
        }

        .logout-section {
            text-align: center;
            margin-top: 3rem;
        }

        .logout-btn {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .logout-btn:hover {
            background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
            color: white;
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="limited-panel-container">
        <div class="panel-header">
            <h1><i class="fas fa-user-shield"></i> Panel Administrateur</h1>
            <p>Bienvenue, {{ app.user.prenom }} {{ app.user.nom }}</p>
        </div>

        <div class="management-grid">
            {% if is_granted('ROLE_GERER_AUTEURS') %}
                <a href="{{ path('admin_authors_index') }}" class="management-item">
                    <div class="icon"><i class="fas fa-user-edit"></i></div>
                    <div class="title">Gérer les Auteurs</div>
                    <div class="description">Ajouter, modifier et supprimer des auteurs</div>
                </a>
            {% endif %}



            {% if is_granted('ROLE_GERER_LIVRES') %}
                <a href="{{ path('admin_books_index') }}" class="management-item">
                    <div class="icon"><i class="fas fa-book"></i></div>
                    <div class="title">Gérer les Livres</div>
                    <div class="description">Ajouter et gérer les livres</div>
                </a>
            {% endif %}

            {% if is_granted('ROLE_GERER_RETOURS') %}
                <a href="{{ path('admin_returns_index') }}" class="management-item">
                    <div class="icon"><i class="fas fa-undo"></i></div>
                    <div class="title">Gérer les Retours</div>
                    <div class="description">Gérer les retours de livres</div>
                </a>
            {% endif %}

            {% if is_granted('ROLE_GERER_EDITEURS') %}
                <a href="{{ path('admin_publishers_index') }}" class="management-item">
                    <div class="icon"><i class="fas fa-building"></i></div>
                    <div class="title">Gérer les Éditeurs</div>
                    <div class="description">Ajouter et gérer les éditeurs</div>
                </a>
            {% endif %}

            {% if is_granted('ROLE_GERER_DISCIPLINES') %}
                <a href="{{ path('admin_disciplines_index') }}" class="management-item">
                    <div class="icon"><i class="fas fa-sitemap"></i></div>
                    <div class="title">Gérer les Disciplines</div>
                    <div class="description">Ajouter et gérer les disciplines</div>
                </a>
            {% endif %}

            {% if is_granted('ROLE_GERER_EMPLACEMENTS') %}
                <a href="{{ path('admin_locations_index') }}" class="management-item">
                    <div class="icon"><i class="fas fa-map-marker-alt"></i></div>
                    <div class="title">Gérer les Emplacements</div>
                    <div class="description">Gérer les emplacements des livres</div>
                </a>
            {% endif %}

            {% if is_granted('ROLE_GERER_COMMANDES') %}
                <a href="{{ path('admin_orders_index') }}" class="management-item">
                    <div class="icon"><i class="fas fa-clipboard-list"></i></div>
                    <div class="title">Gérer les Commandes</div>
                    <div class="description">Gérer les commandes de livres</div>
                </a>
            {% endif %}

            {% if is_granted('ROLE_GERER_LECTEURS') %}
                <a href="{{ path('admin_lecteurs_index') }}" class="management-item">
                    <div class="icon"><i class="fas fa-user-graduate"></i></div>
                    <div class="title">Gérer les Lecteurs</div>
                    <div class="description">Gestion des comptes lecteurs</div>
                </a>
            {% endif %}

            {% if is_granted('ROLE_GERER_UTILISATEURS') %}
                <a href="{{ path('admin_users_index') }}" class="management-item">
                    <div class="icon"><i class="fas fa-users-cog"></i></div>
                    <div class="title">Gérer les Utilisateurs</div>
                    <div class="description">Gestion des administrateurs</div>
                </a>
            {% endif %}

            {% if is_granted('ROLE_GERER_HISTORIQUE') %}
                <a href="{{ path('admin_historique_index') }}" class="management-item">
                    <div class="icon"><i class="fas fa-history"></i></div>
                    <div class="title">Historique</div>
                    <div class="description">Historique des emprunts</div>
                </a>
            {% endif %}
        </div>

        <div class="logout-section">
            <a href="{{ path('app_logout') }}" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i> Déconnexion
            </a>
        </div>
    </div>
</body>
</html>

