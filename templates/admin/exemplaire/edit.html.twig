{% extends 'base.html.twig' %}

{% block title %}Edit Exemplaire{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="admin-nav">
            <div class="admin-nav-links">
                <a href="{{ path('admin_dashboard') }}" class="admin-nav-link">Dashboard</a>
                <a href="{{ path('admin_books_index') }}" class="admin-nav-link">Books</a>
                <a href="{{ path('app_domains') }}" class="admin-nav-link">Main Site</a>
            </div>
            <div class="admin-user-info">
                Welcome, Admin | <a href="{{ path('app_logout') }}" style="color: white;">Logout</a>
            </div>
        </div>

        <div class="page-header">
            <h1>Edit Exemplaire</h1>
            <div class="book-info">
                <p><strong>Book:</strong> {{ book.title }}</p>
                <p><strong>Barcode:</strong> {{ exemplaire.barcode }}</p>
            </div>
        </div>

        <div class="form-container">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.status) }}
                        {{ form_row(form.locationId) }}
                        {{ form_row(form.callNumber) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.acquisitionDate) }}
                        {{ form_row(form.returnDate) }}
                        {{ form_row(form.price) }}
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a href="{{ path('admin_books_show', {'id': book.id}) }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Book
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 