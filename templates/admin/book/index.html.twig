{% extends 'base.html.twig' %}

{% block title %}Admin - Books Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
    <style>
        .book-cover {
            width: 60px;
            height: 80px;
            object-fit: cover;
            border-radius: 5px;
            border: 1px solid #dee2e6;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="admin-nav">
            <div class="admin-nav-links">
                <a href="{{ path('admin_dashboard') }}" class="admin-nav-link">Dashboard</a>
                <a href="{{ path('admin_orders_index') }}" class="admin-nav-link">Orders</a>
                <a href="{{ path('admin_domains_index') }}" class="admin-nav-link">Domains</a>
                <a href="{{ path('admin_sections_index') }}" class="admin-nav-link">Sections</a>
                <a href="{{ path('admin_authors_index') }}" class="admin-nav-link">Authors</a>
                <a href="{{ path('admin_books_index') }}" class="admin-nav-link active">Books</a>
                <a href="{{ path('app_domains') }}" class="admin-nav-link">Main Site</a>
            </div>
            <div class="admin-user-info">
                Welcome, Admin | <a href="{{ path('app_logout') }}" style="color: white;">Logout</a>
            </div>
        </div>
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="page-header">
            <h1>Books Management</h1>
            <a href="{{ path('admin_book_new') }}" class="btn btn-add">
                <i class="fas fa-plus"></i> Add New Book
            </a>
        </div>
        
        <form class="admin-search-form" method="get" action="{{ path('admin_books_index') }}">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search by title, author or ISBN..." value="{{ searchTerm }}">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
            {% if searchTerm %}
                <a href="{{ path('admin_books_index') }}" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Clear
                </a>
            {% endif %}
        </form>
        
        {% if pagination.totalItems == 0 %}
            <div class="no-items">
                <h3>No Books Found</h3>
                <p class="text-muted">{% if searchTerm %}No results for "{{ searchTerm }}". Try a different search term.{% else %}Get started by adding your first book.{% endif %}</p>
                <a href="{{ path('admin_book_new') }}" class="btn btn-add mt-3">
                    <i class="fas fa-plus"></i> Add New Book
                </a>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="admin-table table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cover</th>
                            <th>Title</th>
                            <th>Authors</th>
                            <th>Section</th>
                            <th>Year</th>
                            <th>ISBN</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for book in books %}
                            <tr>
                                <td>{{ book.id }}</td>
                                <td>
                                    {% if book.coverImage %}
                                        <img src="{{ book.coverImage }}" alt="{{ book.title }}" class="book-cover">
                                    {% else %}
                                        <div class="book-cover d-flex align-items-center justify-content-center bg-light">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    {% endif %}
                                </td>
                                <td>{{ book.title }}</td>
                                <td>{{ book.authorName }}</td>
                                <td>{{ book.section.name }} ({{ book.section.domain.name }})</td>
                                <td>{{ book.publicationYear|default('-') }}</td>
                                <td>{{ book.isbn|default('-') }}</td>
                                <td class="text-end">
                                    <a href="{{ path('admin_books_show', {'id': book.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_book_edit', {'id': book.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">
                        Showing {{ books|length }} of {{ pagination.totalItems }} books
                    </small>
                </div>
                
                {% if pagination.totalPages > 1 %}
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            {% if pagination.currentPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('admin_books_index', {page: pagination.currentPage - 1, search: searchTerm}) }}">Previous</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Previous</span>
                                </li>
                            {% endif %}
                            
                            {% for i in max(1, pagination.currentPage - 2)..min(pagination.totalPages, pagination.currentPage + 2) %}
                                <li class="page-item {{ i == pagination.currentPage ? 'active' }}">
                                    <a class="page-link" href="{{ path('admin_books_index', {page: i, search: searchTerm}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}
                            
                            {% if pagination.currentPage < pagination.totalPages %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('admin_books_index', {page: pagination.currentPage + 1, search: searchTerm}) }}">Next</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Next</span>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %} 