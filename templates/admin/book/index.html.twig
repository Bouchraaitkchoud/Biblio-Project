{% extends 'base.html.twig' %}

{% block title %}Admin - Books Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #fdfaf5 !important;
            font-family: 'Georgia', serif;
            color: #4e4a45;
            min-height: 100vh;
        }
        .page-header {
            font-size: 2.2rem;
            font-weight: bold;
            margin: 2rem 0 1.5rem 0;
            color: #1a2e4f;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .btn-add {
            background-color: #b2903e;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.6rem 1.2rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            transition: background 0.2s;
        }
        .btn-add:hover {
            background-color: #967a2b;
            color: #fff;
        }
        .admin-search-form {
            margin-bottom: 2rem;
            display: flex;
            gap: 1rem;
            align-items: center;
        }
        .admin-search-form .input-group {
            flex: 1;
        }
        .form-control {
            border: 1px solid #d8d2c4;
            border-radius: 6px;
        }
        .book-entry {
            background: #fff;
            border-left: 4px solid #b2903e;
            margin-bottom: 1.5rem;
            padding: 1.2rem 1.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }
        .book-cover {
            width: 60px;
            height: 80px;
            object-fit: cover;
            border-radius: 5px;
            border: 1px solid #dee2e6;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .book-info {
            flex: 1;
        }
        .book-title {
            font-size: 1.15rem;
            font-weight: bold;
            color: #1a2e4f;
        }
        .book-meta {
            color: #7a6b52;
            font-size: 0.98rem;
            margin-top: 0.2rem;
        }
        .book-actions {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }
        .btn-sm {
            padding: 0.35rem 0.7rem;
            font-size: 0.95em;
            border-radius: 5px;
        }
        .btn-info {
            background: #b2903e;
            color: #fff;
            border: none;
        }
        .btn-info:hover {
            background: #967a2b;
            color: #fff;
        }
        .btn-primary {
            background: #1a2e4f;
            color: #fff;
            border: none;
        }
        .btn-primary:hover {
            background: #b2903e;
            color: #fff;
        }
        .no-items {
            text-align: center;
            padding: 40px 20px;
            color: #7a6b52;
            font-family: 'Georgia', serif;
        }
        .pagination {
            margin-top: 2rem;
            justify-content: center;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        <div class="page-header">
            <span>Books Management</span>
            <a href="{{ path('admin_book_new') }}" class="btn btn-add">
                <i class="fas fa-plus"></i> Add New Book
            </a>
        </div>
        <form class="admin-search-form" method="get" action="{{ path('admin_books_index') }}">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search by title, author or ISBN..." value="{{ searchTerm }}">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
            {% if searchTerm %}
                <a href="{{ path('admin_books_index') }}" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Clear
                </a>
            {% endif %}
        </form>
        {% if pagination.totalItems == 0 %}
            <div class="no-items">
                <h3>No Books Found</h3>
                <p class="text-muted">{% if searchTerm %}No results for "{{ searchTerm }}". Try a different search term.{% else %}Get started by adding your first book.{% endif %}</p>
                <a href="{{ path('admin_book_new') }}" class="btn btn-add mt-3">
                    <i class="fas fa-plus"></i> Add New Book
                </a>
            </div>
        {% else %}
            {% for book in books %}
                <div class="book-entry">
                    <div>
                        {% if book.coverImage %}
                            <img src="{{ book.coverImage }}" alt="{{ book.title }}" class="book-cover">
                        {% else %}
                            <div class="book-cover d-flex align-items-center justify-content-center bg-light">
                                <i class="fas fa-image text-muted"></i>
                            </div>
                        {% endif %}
                    </div>
                    <div class="book-info">
                        <div class="book-title">{{ book.title }}</div>
                        <div class="book-meta">
                            <span><strong>Authors:</strong> {{ book.authorName }}</span> |
                            <span><strong>Discipline:</strong> {{ book.discipline.name }}</span> |
                            <span><strong>Year:</strong> {{ book.publicationYear|default('-') }}</span> |
                            <span><strong>ISBN:</strong> {{ book.isbn|default('-') }}</span>
                        </div>
                    </div>
                    <div class="book-actions">
                        <a href="{{ path('admin_books_show', {'id': book.id}) }}" class="btn btn-sm btn-info" title="View details">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('admin_book_edit', {'id': book.id}) }}" class="btn btn-sm btn-primary" title="Edit book">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </div>
            {% endfor %}
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">
                        Showing {{ books|length }} of {{ pagination.totalItems }} books
                    </small>
                </div>
                {% if pagination.totalPages > 1 %}
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            {% if pagination.currentPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('admin_books_index', {page: pagination.currentPage - 1, search: searchTerm}) }}">Previous</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Previous</span>
                                </li>
                            {% endif %}
                            {% for i in max(1, pagination.currentPage - 2)..min(pagination.totalPages, pagination.currentPage + 2) %}
                                <li class="page-item {{ i == pagination.currentPage ? 'active' }}">
                                    <a class="page-link" href="{{ path('admin_books_index', {page: i, search: searchTerm}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}
                            {% if pagination.currentPage < pagination.totalPages %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('admin_books_index', {page: pagination.currentPage + 1, search: searchTerm}) }}">Next</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Next</span>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %} 