{% extends 'admin/layout.html.twig' %}

{% block title %}Admin - View Book{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #fdfaf5 !important;
            font-family: 'Georgia', serif;
            color: #4e4a45;
            min-height: 100vh;
        }
        .page-header {
            font-size: 2.2rem;
            font-weight: bold;
            margin: 2rem 0 1.5rem 0;
            color: #1a2e4f;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .form-container {
            background: #fff;
            border-left: 4px solid #b2903e;
            margin-bottom: 2rem;
            padding: 2rem 2.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
        }
        .btn-primary {
            background: #1a2e4f;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            transition: background 0.2s;
        }
        .btn-primary:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-secondary {
            background: #6c757d;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
        }
        .btn-secondary:hover {
            background: #b2903e;
            color: #fff;
        }
        .back-link {
            margin-top: 1.5rem;
            display: inline-block;
        }
        .alert {
            border-radius: 8px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="page-header">
            <span>View Book: {{ book.title }}</span>
            <a href="{{ path('admin_books_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="form-container">
            <div class="mb-3">
                <label for="title" class="form-label">Book Title</label>
                <input type="text" id="title" class="form-control" value="{{ book.title }}" readonly>
            </div>
            <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input type="text" id="author" class="form-control" value="{{ book.author.name }}" readonly>
            </div>
            <div class="mb-3">
                <label for="section" class="form-label">Section</label>
                <input type="text" id="section" class="form-control" value="{{ book.discipline.name }}" readonly>
            </div>
            <div style="display: flex; gap: 1rem; align-items: center;">
                <a href="{{ path('admin_books_edit', {'id': book.id}) }}" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit Book
                </a>
                <a href="{{ path('admin_books_index') }}" class="btn btn-secondary back-link">Cancel</a>
            </div>
        </div>
    </div>
{% endblock %} 