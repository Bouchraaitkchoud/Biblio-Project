{% extends 'admin/layout.html.twig' %}

{% block title %}Admin - Book Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #fdfaf5 !important;
            font-family: 'Georgia', serif;
            color: #4e4a45;
            min-height: 100vh;
        }
            color: #4e4a45;
            min-height: 100vh;
        }
        .page-header {
            font-size: 2.2rem;
            font-weight: bold;
            margin: 2rem 0 1.5rem 0;
            color: #1a2e4f;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .book-detail-card {
            background: #fff;
            border-left: 4px solid #b2903e;
            margin-bottom: 2rem;
            padding: 2rem 2.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
            display: flex;
            gap: 2rem;
            align-items: flex-start;
        }
        .book-cover {
            width: 100px;
            height: 140px;
            object-fit: cover;
            border-radius: 5px;
            border: 1px solid #dee2e6;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .book-info {
            flex: 1;
        }
        .book-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #1a2e4f;
            margin-bottom: 0.5rem;
        }
        .book-meta {
            color: #7a6b52;
            font-size: 1rem;
            margin-bottom: 1.2rem;
        }
        .book-actions {
            display: flex;
            gap: 0.7rem;
            margin-bottom: 1.2rem;
        }
        .btn-edit {
            background: #f7e7c1;
            color: #b2903e;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
        }
        .btn-edit:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-delete {
            background: #f8d7da;
            color: #dc3545;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
        }
        .btn-delete:hover {
            background: #dc3545;
            color: #fff;
        }
        .book-info-label {
            font-weight: bold;
            color: #495057;
        }
        .authors-list {
            list-style: none;
            padding-left: 0;
        }
        .authors-list li {
            padding: 4px 0;
        }
        .alert {
            border-radius: 8px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="page-header">
            <span>Book Details</span>
        </div>

        <div class="book-detail-card">
            <div>
                {% if book.coverImage %}
                    <img src="{{ book.coverImageUrl }}" alt="{{ book.title }}" class="book-cover mb-3">
                {% else %}
                    <div class="book-cover d-flex align-items-center justify-content-center bg-light">
                        <i class="fas fa-image text-muted"></i>
                    </div>
                {% endif %}
            </div>
            <div class="book-info">
                <div class="book-title">{{ book.title }}</div>
                <div class="book-meta">
                    <span><strong>Publication Year:</strong> {{ book.publicationYear ?: 'Not specified' }}</span> |
                    <span><strong>ISBN:</strong> {{ book.isbn ?: 'Not specified' }}</span> |
                    <span><strong>Discipline:</strong> {{ book.discipline.name }}</span>
                </div>
                <div class="book-meta">
                    <span><strong>Authors:</strong> 
                        {% if book.authors|length > 0 %}
                            {{ book.authors|map(a => a.name)|join(', ') }}
                        {% else %}
                            No authors assigned
                        {% endif %}
                    </span>
                </div>
                {% if book.description %}
                    <div class="book-meta">
                        <span><strong>Description:</strong> {{ book.description }}</span>
                    </div>
                {% endif %}
                <div class="book-actions">
                    <a href="{{ path('admin_book_edit', {'id': book.id}) }}" class="btn btn-edit">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <button type="button" class="btn btn-delete" data-bs-toggle="modal" data-bs-target="#deleteBookModal">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
                <a href="{{ path('admin_books_index') }}" class="btn btn-secondary back-link">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
        <!-- Exemplaires Table -->
        <div class="book-detail-card" style="margin-top: 1.5rem;">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                <h3 style="margin: 0; color: #1a2e4f;">Exemplaires</h3>
                <a href="{{ path('admin_book_add_exemplaire', {'id': book.id}) }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Exemplaire
                </a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Barcode</th>
                        <th>Status</th>
                        <th>Location</th>
                        <th>Call Number</th>
                        <th>Acquisition Date</th>
                        <th>Return Date</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for exemplaire in exemplaires %}
                        <tr>
                            <td>{{ exemplaire.barcode }}</td>
                            <td>
                                <span class="badge {% if exemplaire.status == 'available' %}bg-success{% elseif exemplaire.status == 'borrowed' %}bg-danger{% else %}bg-warning{% endif %}">
                                    {{ exemplaire.status|capitalize }}
                                </span>
                            </td>
                            <td>{{ exemplaire.locationId }}</td>
                            <td>{{ exemplaire.callNumber }}</td>
                            <td>{{ exemplaire.acquisitionDate ? exemplaire.acquisitionDate|date('Y-m-d') : '-' }}</td>
                            <td>{{ exemplaire.returnDate ? exemplaire.returnDate|date('Y-m-d') : '-' }}</td>
                            <td>{{ exemplaire.price ? exemplaire.price|number_format(2) : '-' }}</td>
                            <td>
                                {% if exemplaire.status == 'borrowed' %}
                                    <form method="post" action="{{ path('admin_exemplaire_return', {'id': exemplaire.id}) }}" style="display:inline-block;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('return' ~ exemplaire.id) }}">
                                        <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Mark this exemplaire as returned?')">
                                            <i class="fas fa-undo"></i> Mark Returned
                                        </button>
                                    </form>
                                {% endif %}
                                <a href="{{ path('admin_exemplaire_edit', {'id': exemplaire.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="8" class="text-center text-muted">No exemplaires found for this book.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %} 