{% extends 'base.html.twig' %}

{% block title %}Admin - Book Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #fdfaf5 !important;
            font-family: 'Georgia', serif;
            color: #4e4a45;
            min-height: 100vh;
        }
        .page-header {
            font-size: 2.2rem;
            font-weight: bold;
            margin: 2rem 0 1.5rem 0;
            color: #1a2e4f;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .book-detail-card {
            background: #fff;
            border-left: 4px solid #b2903e;
            margin-bottom: 2rem;
            padding: 2rem 2.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
            display: flex;
            gap: 2rem;
            align-items: flex-start;
        }
        .book-cover {
            width: 100px;
            height: 140px;
            object-fit: cover;
            border-radius: 5px;
            border: 1px solid #dee2e6;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .book-info {
            flex: 1;
        }
        .book-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #1a2e4f;
            margin-bottom: 0.5rem;
        }
        .book-meta {
            color: #7a6b52;
            font-size: 1rem;
            margin-bottom: 1.2rem;
        }
        .book-actions {
            display: flex;
            gap: 0.7rem;
            margin-bottom: 1.2rem;
        }
        .btn-edit {
            background: #f7e7c1;
            color: #b2903e;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
        }
        .btn-edit:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-delete {
            background: #f8d7da;
            color: #dc3545;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
        }
        .btn-delete:hover {
            background: #dc3545;
            color: #fff;
        }
        .book-info-label {
            font-weight: bold;
            color: #495057;
        }
        .authors-list {
            list-style: none;
            padding-left: 0;
        }
        .authors-list li {
            padding: 4px 0;
        }
        .alert {
            border-radius: 8px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="page-header">
            <span>Book Details</span>
        </div>

        <div class="book-detail-card">
            <div>
                {% if book.coverImage %}
                    <img src="{{ book.coverImage }}" alt="{{ book.title }}" class="book-cover mb-3">
                {% else %}
                    <div class="book-cover d-flex align-items-center justify-content-center bg-light">
                        <i class="fas fa-image text-muted"></i>
                    </div>
                {% endif %}
            </div>
            <div class="book-info">
                <div class="book-title">{{ book.title }}</div>
                <div class="book-meta">
                    <span><strong>Publication Year:</strong> {{ book.publicationYear ?: 'Not specified' }}</span> |
                    <span><strong>ISBN:</strong> {{ book.isbn ?: 'Not specified' }}</span> |
                    <span><strong>Domain:</strong> {{ book.section.domain.name }}</span> |
                    <span><strong>Section:</strong> {{ book.section.name }}</span>
                </div>
                <div class="book-meta">
                    <span><strong>Authors:</strong> 
                        {% if book.authors|length > 0 %}
                            {{ book.authors|map(a => a.name)|join(', ') }}
                        {% else %}
                            No authors assigned
                        {% endif %}
                    </span>
                </div>
                {% if book.description %}
                    <div class="book-meta">
                        <span><strong>Description:</strong> {{ book.description }}</span>
                    </div>
                {% endif %}
                <div class="book-actions">
                    <a href="{{ path('admin_book_edit', {'id': book.id}) }}" class="btn btn-edit">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <button type="button" class="btn btn-delete" data-bs-toggle="modal" data-bs-target="#deleteBookModal">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
                <a href="{{ path('admin_books_index') }}" class="btn btn-secondary back-link">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
{% endblock %} 