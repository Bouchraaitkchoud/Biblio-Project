{% extends 'base.html.twig' %}

{% block title %}Add Exemplaire - {{ book.title }}{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">Add Exemplaire to "{{ book.title }}"</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.barcode) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.section_id) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.status_id) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.location_id) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.call_number) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.acquisition_date) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.price) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.comment) }}
                                </div>
                            </div>
                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('admin_books_show', {'id': book.id}) }}" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary">Add Exemplaire</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 