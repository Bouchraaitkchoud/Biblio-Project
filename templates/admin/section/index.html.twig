{% extends 'base.html.twig' %}

{% block title %}Admin - Sections Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="admin-nav">
            <div class="admin-nav-links">
                <a href="{{ path('admin_dashboard') }}" class="admin-nav-link">Dashboard</a>
                <a href="{{ path('admin_orders_index') }}" class="admin-nav-link">Orders</a>
                <a href="{{ path('admin_domains_index') }}" class="admin-nav-link">Domains</a>
                <a href="{{ path('admin_sections_index') }}" class="admin-nav-link active">Sections</a>
                <a href="{{ path('admin_authors_index') }}" class="admin-nav-link">Authors</a>
                <a href="{{ path('admin_books_index') }}" class="admin-nav-link">Books</a>
                <a href="{{ path('app_domains') }}" class="admin-nav-link">Main Site</a>
            </div>
            <div class="admin-user-info">
                Welcome, Admin | <a href="{{ path('app_logout') }}" style="color: white;">Logout</a>
            </div>
        </div>
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="page-header">
            <h1>Sections Management</h1>
            <a href="{{ path('admin_section_new') }}" class="btn btn-add">
                <i class="fas fa-plus"></i> Add New Section
            </a>
        </div>
        
        <table class="admin-table table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Section Name</th>
                    <th>Domain</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if sections|length > 0 %}
                    {% for section in sections %}
                        <tr>
                            <td>{{ section.id }}</td>
                            <td>{{ section.name }}</td>
                            <td>{{ section.domain.name }}</td>
                            <td class="actions">
                                <a href="{{ path('admin_section_show', {'id': section.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a href="{{ path('admin_section_edit', {'id': section.id}) }}" class="btn btn-sm btn-edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="#" onclick="event.preventDefault(); if(confirm('Are you sure you want to delete this section?')) { document.getElementById('delete-form-{{ section.id }}').submit(); }" class="btn btn-sm btn-delete">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                                <form id="delete-form-{{ section.id }}" action="{{ path('admin_section_delete', {'id': section.id}) }}" method="post" style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ section.id) }}">
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-3">No sections found</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %} 