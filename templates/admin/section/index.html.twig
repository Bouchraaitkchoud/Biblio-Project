{% extends 'base.html.twig' %}

{% block title %}Admin - Sections Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #fdfaf5 !important;
            font-family: 'Georgia', serif;
            color: #4e4a45;
            min-height: 100vh;
        }
        .page-header {
            font-size: 2.2rem;
            font-weight: bold;
            margin: 2rem 0 1.5rem 0;
            color: #1a2e4f;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .btn-add {
            background-color: #b2903e;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.6rem 1.2rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            transition: background 0.2s;
        }
        .btn-add:hover {
            background-color: #967a2b;
            color: #fff;
        }
        .admin-search-form {
            margin-bottom: 2rem;
            display: flex;
            gap: 1rem;
            align-items: center;
        }
        .admin-search-form .input-group {
            flex: 1;
        }
        .form-control {
            border: 1px solid #d8d2c4;
            border-radius: 6px;
        }
        .section-entry {
            background: #fff;
            border-left: 4px solid #b2903e;
            margin-bottom: 1.5rem;
            padding: 1.2rem 1.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .section-info {
            flex: 1;
        }
        .section-name {
            font-size: 1.3rem;
            font-weight: bold;
            color: #1a2e4f;
        }
        .section-domain {
            color: #7a6b52;
            font-size: 1rem;
            margin-top: 0.2rem;
        }
        .section-actions {
            display: flex;
            gap: 0.5rem;
        }
        .btn-sm {
            padding: 0.35rem 0.7rem;
            font-size: 0.95em;
            border-radius: 5px;
        }
        .btn-edit {
            background: #f7e7c1;
            color: #b2903e;
            border: none;
        }
        .btn-edit:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-delete {
            background: #f8d7da;
            color: #dc3545;
            border: none;
        }
        .btn-delete:hover {
            background: #dc3545;
            color: #fff;
        }
        .btn-primary {
            background: #1a2e4f;
            color: #fff;
            border: none;
        }
        .btn-primary:hover {
            background: #b2903e;
            color: #fff;
        }
        .no-items {
            text-align: center;
            padding: 40px 20px;
            color: #7a6b52;
            font-family: 'Georgia', serif;
        }
        .pagination {
            margin-top: 2rem;
            justify-content: center;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="page-header">
            <span>Sections Management</span>
            <a href="{{ path('admin_section_new') }}" class="btn btn-add">
                <i class="fas fa-plus"></i> Add New Section
            </a>
        </div>

        <form class="admin-search-form" method="get" action="{{ path('admin_sections_index') }}">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search by section or domain name..." value="{{ searchTerm }}">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
            {% if searchTerm %}
                <a href="{{ path('admin_sections_index') }}" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Clear
                </a>
            {% endif %}
        </form>

        {% if pagination.totalItems == 0 %}
            <div class="no-items">
                <h3>No Sections Found</h3>
                <p class="text-muted">{% if searchTerm %}No results for "{{ searchTerm }}". Try a different search term.{% else %}Get started by adding your first section.{% endif %}</p>
                <a href="{{ path('admin_section_new') }}" class="btn btn-add mt-3">
                    <i class="fas fa-plus"></i> Add New Section
                </a>
            </div>
        {% else %}
            {% for section in sections %}
                <div class="section-entry">
                    <div class="section-info">
                        <div class="section-name">{{ section.name }}</div>
                        <div class="section-domain">Domain: {{ section.domain.name }}</div>
                    </div>
                    <div class="section-actions">
                        <a href="{{ path('admin_section_show', {'id': section.id}) }}" class="btn btn-sm btn-primary" title="View details">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('admin_section_edit', {'id': section.id}) }}" class="btn btn-sm btn-edit" title="Edit section">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form method="post" action="{{ path('admin_section_delete', {'id': section.id}) }}" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this section?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ section.id) }}">
                            <button class="btn btn-sm btn-delete" title="Delete section">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}

            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">
                        Showing {{ sections|length }} of {{ pagination.totalItems }} sections
                    </small>
                </div>

                {% if pagination.totalPages > 1 %}
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            {% if pagination.currentPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('admin_sections_index', {page: pagination.currentPage - 1, search: searchTerm}) }}">Previous</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Previous</span>
                                </li>
                            {% endif %}

                            {% for i in max(1, pagination.currentPage - 2)..min(pagination.totalPages, pagination.currentPage + 2) %}
                                <li class="page-item {{ i == pagination.currentPage ? 'active' }}">
                                    <a class="page-link" href="{{ path('admin_sections_index', {page: i, search: searchTerm}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}

                            {% if pagination.currentPage < pagination.totalPages %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('admin_sections_index', {page: pagination.currentPage + 1, search: searchTerm}) }}">Next</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Next</span>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %} 