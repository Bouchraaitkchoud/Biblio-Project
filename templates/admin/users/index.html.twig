{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des Administrateurs{% endblock %}

{% block admin_content %}
    <div class="page-header d-flex justify-content-between align-items-center">
        <h1>Gestion des Administrateurs</h1>
        <div>
            <a href="{{ path('admin_users_export_csv') }}" class="btn btn-success me-2">
                <i class="fas fa-file-csv"></i> Exporter CSV
            </a>
            <a href="{{ path('admin_users_new_admin') }}" class="btn btn-success">
                <i class="fas fa-user-plus"></i> Ajouter un administrateur
            </a>
        </div>
    </div>

    {% if users is empty %}
        <div class="alert alert-info">
            Aucun administrateur trouvé.
        </div>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Login</th>
                    <th>Rôles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.prenom }}</td>
                        <td>{{ user.login }}</td>
                        <td>{{ user.roles|join(', ') }}</td>
                        <td>
                            <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-primary">
                                Modifier
                            </a>
                            <form method="post" action="{{ path('admin_user_delete', {id: user.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet administrateur ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn btn-sm btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}