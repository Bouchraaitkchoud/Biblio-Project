{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des Administrateurs{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <div class="page-header d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1><i class="fas fa-user-shield"></i> Gestion des Administrateurs</h1>
            </div>
            <div>
                <a href="{{ path('admin_users_export_csv') }}" class="btn btn-success me-2">
                    <i class="fas fa-file-csv"></i> Exporter CSV
                </a>
                <a href="{{ path('admin_users_new_admin') }}" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Nouvel Administrateur
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                {% if users is empty %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Aucun administrateur trouvé.
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Nom Complet</th>
                                    <th>Login</th>
                                    <th>Type</th>
                                    <th>Permissions</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td><strong>#{{ user.id }}</strong></td>
                                        <td>
                                            <div>
                                                <strong>{{ user.nom }} {{ user.prenom }}</strong>
                                            </div>
                                            <small class="text-muted">{{ user.email }}</small>
                                        </td>
                                        <td><code>{{ user.login }}</code></td>
                                        <td>
                                            {% if 'ROLE_ADMIN' in user.roles %}
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-crown"></i> Admin Absolu
                                                </span>
                                            {% elseif 'ROLE_LIMITED_ADMIN' in user.roles %}
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-user-cog"></i> Admin Limité
                                                </span>
                                            {% else %}
                                                <span class="badge bg-secondary">Utilisateur</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if 'ROLE_ADMIN' in user.roles %}
                                                <span class="text-success">
                                                    <i class="fas fa-check-circle"></i> Accès complet
                                                </span>
                                            {% elseif 'ROLE_LIMITED_ADMIN' in user.roles %}
                                                <div class="small">
                                                    {% set permCount = user.roles|length - 1 %}
                                                    <i class="fas fa-key"></i> {{ permCount }} permission(s)
                                                    <br>
                                                    {% for role in user.roles %}
                                                        {% if role starts with 'ROLE_GERER_' %}
                                                            <span class="badge bg-light text-dark me-1">
                                                                {{ role|replace({'ROLE_GERER_': ''})|lower|title }}
                                                            </span>
                                                        {% endif %}
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group">
                                                <a href="{{ path('admin_user_edit', {id: user.id}) }}" 
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="post" 
                                                      action="{{ path('admin_user_delete', {id: user.id}) }}" 
                                                      style="display: inline;" 
                                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet administrateur ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                    <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i> 
                            Total : {{ users|length }} administrateur(s)
                        </small>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <i class="fas fa-crown"></i> Admin Absolu
                    </div>
                    <div class="card-body">
                        <p class="mb-0">Accès complet à toutes les fonctionnalités sans restriction.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <i class="fas fa-user-cog"></i> Admin Limité
                    </div>
                    <div class="card-body">
                        <p class="mb-0">Accès restreint selon les permissions attribuées.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}