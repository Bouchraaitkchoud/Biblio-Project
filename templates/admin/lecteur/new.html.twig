{% extends 'admin/layout.html.twig' %}

{% block title %}Nouveau Lecteur{% endblock %}

{% block admin_content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user-plus"></i> Créer un nouveau lecteur</h1>
        <div>
            <button type="button" class="btn btn-outline-primary me-2" id="toggleImportBtn" onclick="toggleImportMode()">
                <i class="fas fa-file-csv"></i> Passer en mode Import CSV
            </button>
            <a href="{{ path('admin_lecteurs_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="row">
        {# Manual Form Section #}
        <div class="col-md-8" id="manualForm">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-edit"></i> Saisie manuelle</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.nom, {'label': 'Nom'}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.prenom, {'label': 'Prénom'}) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.email, {'label': 'Email'}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.telephone, {'label': 'Téléphone'}) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.adresse, {'label': 'Adresse'}) }}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.codePostal, {'label': 'Code postal'}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.ville, {'label': 'Ville'}) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.formation, {'label': 'Formation'}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.promotion, {'label': 'Promotion'}) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.password, {'label': 'Mot de passe'}) }}
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                            <a href="{{ path('admin_lecteurs_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        {# CSV Import Section #}
        <div class="col-md-8" id="csvImportForm" style="display: none;">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-file-csv"></i> Import CSV</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading"><i class="fas fa-info-circle"></i> Format du fichier CSV</h6>
                        <p class="mb-2">Le fichier CSV doit contenir les colonnes suivantes (dans cet ordre) :</p>
                        <p class="mb-0"><code>Nom, Prénom, Code d'admission, Établissement, Formation, Promotion, Email, Mot de passe</code></p>
                    </div>

                    <form action="{{ path('admin_lecteurs_import_csv') }}" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="csvFile" class="form-label">
                                <i class="fas fa-file-upload"></i> Sélectionner un fichier CSV
                            </label>
                            <input type="file" class="form-control" id="csvFile" name="csv_file" accept=".csv" required>
                            <div class="form-text">Format accepté : .csv uniquement</div>
                        </div>
                        <input type="hidden" name="_token" value="{{ csrf_token('csv_import') }}">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-upload"></i> Importer le fichier
                            </button>
                            <a href="{{ path('admin_lecteurs_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {# Help Sidebar #}
        <div class="col-md-4" id="helpSidebar">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-question-circle"></i> Aide</h6>
                </div>
                <div class="card-body">
                    <h6>Champs obligatoires :</h6>
                    <ul class="small">
                        <li>Nom</li>
                        <li>Prénom</li>
                        <li>Email (unique)</li>
                        <li>Mot de passe</li>
                    </ul>

                    <h6 class="mt-3">Mot de passe :</h6>
                    <p class="small text-muted mb-2">Le mot de passe sera stocké en clair. Minimum 8 caractères recommandé.</p>

                    <h6 class="mt-3">Import CSV :</h6>
                    <p class="small text-muted mb-0">Créez plusieurs lecteurs d'un coup en important un fichier CSV. Utilisez le bouton en haut pour basculer entre les modes.</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleImportMode() {
            const manualForm = document.getElementById('manualForm');
            const csvForm = document.getElementById('csvImportForm');
            const toggleBtn = document.getElementById('toggleImportBtn');
            
            if (manualForm.style.display === 'none') {
                // Switch to manual form
                manualForm.style.display = 'block';
                csvForm.style.display = 'none';
                toggleBtn.innerHTML = '<i class="fas fa-file-csv"></i> Passer en mode Import CSV';
            } else {
                // Switch to CSV import
                manualForm.style.display = 'none';
                csvForm.style.display = 'block';
                toggleBtn.innerHTML = '<i class="fas fa-edit"></i> Passer en mode Saisie manuelle';
            }
        }
    </script>
{% endblock %}