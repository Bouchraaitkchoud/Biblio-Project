{% extends 'admin/layout.html.twig' %}

{% block title %}Nouveau Lecteur{% endblock %}

{% block admin_content %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Créer un nouveau Lecteur</h1>
        <button type="button" class="btn btn-secondary btn-sm" id="toggleImportBtn" onclick="toggleImportMode()">
            <i class="fas fa-file-csv"></i> Utiliser un fichier CSV
        </button>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {# Manual Form Section #}
    <div id="manualForm">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary">Créer</button>
        {{ form_end(form) }}
    </div>

    {# CSV Import Section #}
    <div id="csvImportForm" style="display: none;">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Importer des lecteurs depuis un fichier CSV</h5>
                <p class="text-muted">
                    Le fichier CSV doit contenir les colonnes suivantes (dans cet ordre) :<br>
                    <code>Nom, Prénom, Code d'admission, Établissement, Formation, Promotion, Email, Mot de passe</code>
                </p>
                <form action="{{ path('admin_lecteurs_import_csv') }}" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="csvFile" class="form-label">Sélectionner un fichier CSV</label>
                        <input type="file" class="form-control" id="csvFile" name="csv_file" accept=".csv" required>
                    </div>
                    <input type="hidden" name="_token" value="{{ csrf_token('csv_import') }}">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-upload"></i> Importer
                    </button>
                </form>
            </div>
        </div>
    </div>

    <a href="{{ path('admin_lecteurs_index') }}" class="mt-3 d-inline-block">Retour à la liste</a>

    <script>
        function toggleImportMode() {
            const manualForm = document.getElementById('manualForm');
            const csvForm = document.getElementById('csvImportForm');
            const toggleBtn = document.getElementById('toggleImportBtn');
            
            if (manualForm.style.display === 'none') {
                // Switch to manual form
                manualForm.style.display = 'block';
                csvForm.style.display = 'none';
                toggleBtn.innerHTML = '<i class="fas fa-file-csv"></i> Utiliser un fichier CSV';
            } else {
                // Switch to CSV import
                manualForm.style.display = 'none';
                csvForm.style.display = 'block';
                toggleBtn.innerHTML = '<i class="fas fa-edit"></i> Saisie manuelle';
            }
        }
    </script>
{% endblock %}