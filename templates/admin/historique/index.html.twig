{# filepath: templates/admin/historique/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Historique des Emprunts{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .export-btn {
            text-align: right;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table th,
        table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
            font-family: 'Georgia', serif;
        }
        table th {
            background-color: #f4f4f4;
        }
    </style>
{% endblock %}

{% block content %}
<div class="container">
    <h1>Historique des Emprunts</h1>
    <div class="export-btn">
        <a href="{{ path('admin_historique_export') }}" class="btn btn-manage">Exporter en CSV</a>
    </div>
    <table>
        <thead>
            <tr>
                <th>Lecteur</th>
                <th>Date de commande</th>
                <th>Date de retour</th>
                <th>Exemplaire</th>
                <th>Discipline</th>
                <th>Admin traitant</th>
            </tr>
        </thead>
        <tbody>
            {% for order in approvedOrders %}
                <tr>
                    <td>
                        {{ order.user.nom }} {{ order.user.prenom }}<br>
                        <small>{{ order.user.email }}</small>
                    </td>
                    <td>{{ order.placedAt|date('d/m/Y H:i') }}</td>
                    <td>{{ order.returnedAt ? order.returnedAt|date('d/m/Y H:i') : 'Non retourné' }}</td>
                    <td>
                        {{ order.exemplaire.book.title }}<br>
                        <small>Code: {{ order.exemplaire.barcode }}</small>
                    </td>
                    <td>{{ order.exemplaire.discipline.name }}</td>
                    <td>{{ order.adminEmail ? order.adminEmail : 'N/A' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun emprunt trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}