{# filepath: templates/admin/historique/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Historique des Emprunts{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .export-btn {
            text-align: right;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table th,
        table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
            font-family: 'Georgia', serif;
        }
        table th {
            background-color: #f4f4f4;
        }
        .status-badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 0.75em;
            font-weight: bold;
            margin-left: 5px;
        }
        .badge-returned {
            background-color: #28a745;
            color: white;
        }
        .badge-borrowed {
            background-color: #ffc107;
            color: #000;
        }
    </style>
{% endblock %}

{% block content %}
<div class="container">
    <h1>Historique des Emprunts</h1>
    <div class="export-btn">
        <a href="{{ path('admin_historique_export') }}" class="btn btn-manage">Exporter en CSV</a>
    </div>
    <table>
        <thead>
            <tr>
                <th>Lecteur</th>
                <th>Date de commande</th>
                <th>Date de retour</th>
                <th>Exemplaire</th>
                <th>Emplacement</th>
                <th>Admin traitant</th>
            </tr>
        </thead>
        <tbody>
            {% for order in approvedOrders %}
                {% for item in order.items %}
                <tr>
                    <td>
                        {{ order.lecteur.nom }} {{ order.lecteur.prenom }}<br>
                        <small>{{ order.lecteur.email }}</small>
                    </td>
                    <td>{{ order.placedAt|date('d/m/Y H:i') }}</td>
                    <td>{{ order.returnedAt ? order.returnedAt|date('d/m/Y H:i') : 'Non retourné' }}</td>
                    <td>
                        {{ item.exemplaire.book.title }}<br>
                        <small>Code: {{ item.exemplaire.barcode }}</small>
                        {% if item.exemplaire.status == 'available' %}
                            <span class="status-badge badge-returned">Retourné</span>
                        {% elseif item.exemplaire.status == 'borrowed' %}
                            <span class="status-badge badge-borrowed">En prêt</span>
                        {% endif %}
                    </td>
                    <td>{{ item.exemplaire.location ? item.exemplaire.location.name : 'N/A' }}</td>
                    <td>
                        {% if order.processedBy %}
                            {{ order.processedBy.email }}
                        {% elseif order.adminEmail %}
                            {{ order.adminEmail }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="6">Aucun emprunt trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}