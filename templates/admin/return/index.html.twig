{% extends 'admin/layout.html.twig' %}

{% block title %}Traiter les retours{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #fdfaf5 !important;
            font-family: 'Georgia', serif;
            color: #4e4a45;
            min-height: 100vh;
        }
        .page-header {
            font-size: 2.2rem;
            font-weight: bold;
            margin: 2rem 0 1.5rem 0;
            color: #1a2e4f;
            text-align: center;
        }
        .return-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .scanner-section, .return-history, .book-details, .pending-orders {
            background: #fff;
            border-left: 4px solid #3365b7;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
            padding: 1.5rem 2rem;
            margin-bottom: 2rem;
        }
        .pending-orders {
            overflow-x: auto;
        }
        .scanner-section h3, .pending-orders h3 {
            color: #1a2e4f;
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }
        .input-group .form-control {
            border: 1px solid #d8d2c4;
            border-radius: 6px 0 0 6px;
            font-size: 1.1em;
        }
        .input-group .btn-primary {
            background: #1a2e4f;
            color: #fff;
            border: none;
            border-radius: 0 6px 6px 0;
            font-weight: bold;
            font-family: 'Georgia', serif;
            transition: background 0.2s;
        }
        .input-group .btn-primary:hover {
            background: #3365b7;
            color: #fff;
        }
        .input-group .btn-secondary {
            background: #3365b7;
            color: #fff;
            border: none;
            border-radius: 6px;
            font-weight: bold;
            font-family: 'Georgia', serif;
            margin-left: 0.5rem;
        }
        .input-group .btn-secondary:hover {
            background: #967a2b;
            color: #fff;
        }
        .book-details {
            display: none;
        }
        .book-details.show {
            display: block;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
            font-size: 0.9em;
        }
        table th,
        table td {
            padding: 8px;
            border: 1px solid #ddd;
            text-align: left;
            font-family: 'Georgia', serif;
            vertical-align: top;
        }
        table th {
            background-color: #1a2e4f;
            color: white;
            font-weight: bold;
            font-size: 0.85em;
            white-space: nowrap;
        }
        table td {
            font-size: 0.9em;
        }
        table td small {
            font-size: 0.85em;
            color: #6c757d;
        }
        .text-muted {
            color: #6c757d !important;
        }
        .status-badge {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.8em;
            font-weight: bold;
        }
        .status-success {
            background-color: #28a745;
            color: white;
        }
        .btn-success {
            background: #1a2e4f;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            transition: background 0.2s;
        }
        .btn-success:hover {
            background: #3365b7;
            color: #fff;
        }
        .quick-return-btn {
            background: #28a745;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 0.35rem 0.7rem;
            font-size: 0.8em;
            font-weight: bold;
            font-family: 'Georgia', serif;
            cursor: pointer;
            transition: background 0.2s;
            white-space: nowrap;
        }
        .quick-return-btn:hover {
            background: #218838;
        }
        .quick-return-btn:disabled {
            background: #6c757d;
            cursor: not-allowed;
        }
        .alert {
            border-radius: 8px;
        }
    </style>
{% endblock %}

{% block admin_content %}
    <div class="page-header">Traiter les retours</div>
    <div class="return-container">
        <div class="scanner-section">
            <h3>Scanner le code-barres</h3>
            <div class="input-group mb-3">
                <input type="text" id="barcodeInput" class="form-control" placeholder="Scannez ou entrez le code-barres" autofocus>
                <button type="button" id="scanButton" class="btn btn-primary">
                    <i class="fas fa-search"></i> Scanner
                </button>
            </div>
            <div id="scanMessage" class="alert" style="display: none;"></div>
        </div>

        {# Table listing approved orders not yet returned #}
        <div class="pending-orders">
            <h3>Commandes en attente de retour</h3>
            <table>
                <thead>
                    <tr>
                        <th>Lecteur</th>
                        <th>Date</th>
                        <th>Livre</th>
                        <th>Code-barres</th>
                        <th>Emplacement</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in pendingOrders %}
                        {% for item in order.items %}
                        <tr>
                            <td>
                                <strong>{{ order.lecteur.nom }} {{ order.lecteur.prenom }}</strong><br>
                                <small class="text-muted">{{ order.lecteur.email }}</small>
                            </td>
                            <td style="white-space: nowrap;">{{ order.placedAt|date('d/m/Y') }}<br><small>{{ order.placedAt|date('H:i') }}</small></td>
                            <td>{{ item.exemplaire.book.title }}</td>
                            <td style="font-family: monospace; font-weight: bold; color: #3365b7;">{{ item.exemplaire.barcode }}</td>
                            <td>{{ item.exemplaire.location ? item.exemplaire.location.name : 'N/A' }}</td>
                            <td style="text-align: center;">
                                {% if item.exemplaire.status == 'borrowed' %}
                                <button class="btn btn-sm btn-success quick-return-btn" 
                                        data-exemplaire-id="{{ item.exemplaire.id }}"
                                        data-barcode="{{ item.exemplaire.barcode }}"
                                        data-title="{{ item.exemplaire.book.title }}">
                                    <i class="fas fa-undo"></i> Retour
                                </button>
                                {% else %}
                                <span class="badge bg-success">Retourné</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="6">Aucune commande en attente de retour</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div id="bookDetails" class="book-details">
            <h3>Détails du livre</h3>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Titre :</strong> <span id="bookTitle"></span></p>
                    <p><strong>Code-barres :</strong> <span id="bookBarcode"></span></p>
                    <p><strong>Emplacement :</strong> <span id="bookLocation" style="color: #3365b7; font-weight: bold;"></span></p>
                </div>
                <div class="col-md-6">
                    <p><strong>Emprunté par :</strong> <span id="borrowedBy"></span></p>
                    <p><strong>Date d'emprunt :</strong> <span id="borrowedDate"></span></p>
                </div>
            </div>
            <button id="processReturn" class="btn btn-success">
                <i class="fas fa-check"></i> Traiter le retour
            </button>
        </div>
        <div class="return-history">
            <h3>Retours d'aujourd'hui</h3>
            <div id="returnHistory"></div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const barcodeInput = document.getElementById('barcodeInput');
            const scanButton = document.getElementById('scanButton');
            const scanMessage = document.getElementById('scanMessage');
            const bookDetails = document.getElementById('bookDetails');
            const processReturnBtn = document.getElementById('processReturn');
            const returnHistory = document.getElementById('returnHistory');
            let currentExemplaireId = null;

            barcodeInput.focus();

            // Handle quick return buttons
            document.querySelectorAll('.quick-return-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const exemplaireId = this.getAttribute('data-exemplaire-id');
                    const barcode = this.getAttribute('data-barcode');
                    const title = this.getAttribute('data-title');
                    
                    if (confirm(`Êtes-vous sûr de vouloir traiter le retour de:\n${title}\n(Code: ${barcode})`)) {
                        quickReturn(exemplaireId, barcode, title, this);
                    }
                });
            });

            // Handle Enter key in barcode input
            barcodeInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    scanBarcodeIfValid();
                }
            });

            // Handle scan button click
            scanButton.addEventListener('click', function() {
                scanBarcodeIfValid();
            });

            function scanBarcodeIfValid() {
                const barcode = barcodeInput.value.trim();
                if (barcode) {
                    scanBarcode(barcode);
                }
            }

            // Handle process return button click
            processReturnBtn.addEventListener('click', function() {
                if (currentExemplaireId) {
                    processReturn(currentExemplaireId);
                }
            });

            function scanBarcode(barcode) {
                const formData = new FormData();
                formData.append('barcode', barcode);

                fetch('{{ path('admin_returns_scan') }}', {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        showBookDetails(data.exemplaire);
                        currentExemplaireId = data.exemplaire.id;
                        showMessage('Livre trouvé !', 'success');
                    } else {
                        showMessage(data.message || 'Erreur lors du scan', 'error');
                        hideBookDetails();
                    }
                })
                .catch(error => {
                    showMessage('Erreur lors du scan : ' + error.message, 'error');
                    hideBookDetails();
                });
            }

            function processReturn(exemplaireId) {
                const formData = new FormData();
                formData.append('exemplaire_id', exemplaireId);

                fetch('{{ path('admin_returns_process') }}', {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        showMessage('Retour traité avec succès !', 'success');
                        addToReturnHistory(data.exemplaire);
                        resetForm();
                    } else {
                        showMessage(data.message || 'Erreur lors du traitement', 'error');
                    }
                })
                .catch(error => {
                    showMessage('Erreur lors du traitement : ' + error.message, 'error');
                });
            }

            function quickReturn(exemplaireId, barcode, title, buttonElement) {
                // Disable button during processing
                buttonElement.disabled = true;
                buttonElement.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Traitement...';

                const formData = new FormData();
                formData.append('exemplaire_id', exemplaireId);

                fetch('{{ path('admin_returns_process') }}', {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        showMessage('Retour traité avec succès !', 'success');
                        // Replace button with success badge
                        buttonElement.parentElement.innerHTML = '<span class="badge bg-success">Retourné</span>';
                        // Add to history
                        addToReturnHistory({
                            book_title: title,
                            barcode: barcode,
                            id: exemplaireId
                        });
                    } else {
                        showMessage(data.message || 'Erreur lors du traitement', 'error');
                        // Re-enable button
                        buttonElement.disabled = false;
                        buttonElement.innerHTML = '<i class="fas fa-undo"></i> Retour rapide';
                    }
                })
                .catch(error => {
                    showMessage('Erreur lors du traitement : ' + error.message, 'error');
                    // Re-enable button
                    buttonElement.disabled = false;
                    buttonElement.innerHTML = '<i class="fas fa-undo"></i> Retour rapide';
                });
            }

            function showBookDetails(exemplaire) {
                document.getElementById('bookTitle').textContent = exemplaire.book_title;
                document.getElementById('bookBarcode').textContent = exemplaire.barcode;
                document.getElementById('bookLocation').textContent = exemplaire.location || 'N/A';
                document.getElementById('borrowedBy').textContent = exemplaire.borrowed_by;
                document.getElementById('borrowedDate').textContent = exemplaire.borrowed_date;
                bookDetails.classList.add('show');
            }

            function hideBookDetails() {
                bookDetails.classList.remove('show');
                currentExemplaireId = null;
            }

            function showMessage(message, type) {
                scanMessage.textContent = message;
                scanMessage.className = 'alert alert-' + (type === 'success' ? 'success' : 'danger');
                scanMessage.style.display = 'block';
                setTimeout(() => { scanMessage.style.display = 'none'; }, 3000);
            }

            function addToReturnHistory(exemplaire) {
                const returnItem = document.createElement('div');
                returnItem.className = 'return-item';
                returnItem.innerHTML = `
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <strong>${exemplaire.book_title}</strong><br>
                            <small>Code-barres : ${exemplaire.barcode}</small>
                        </div>
                        <span class="status-badge status-success">Retourné</span>
                    </div>
                `;
                returnHistory.insertBefore(returnItem, returnHistory.firstChild);
            }

            function resetForm() {
                barcodeInput.value = '';
                hideBookDetails();
                barcodeInput.focus();
            }
        });
    </script>
{% endblock %}
