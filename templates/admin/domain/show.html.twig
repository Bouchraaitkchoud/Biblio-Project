{% extends 'base.html.twig' %}

{% block title %}Admin - Domain Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #fdfaf5 !important;
            font-family: 'Georgia', serif;
            color: #4e4a45;
            min-height: 100vh;
        }
        .page-header {
            font-size: 2.2rem;
            font-weight: bold;
            margin: 2rem 0 1.5rem 0;
            color: #1a2e4f;
        }
        .domain-detail-card {
            background: #fff;
            border-left: 4px solid #b2903e;
            margin-bottom: 2rem;
            padding: 2rem 2.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
        }
        .domain-name {
            font-size: 1.5rem;
            font-weight: bold;
            color: #1a2e4f;
            margin-bottom: 0.5rem;
        }
        .domain-sections {
            color: #7a6b52;
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }
        .section-list {
            margin-bottom: 1.5rem;
        }
        .section-list li {
            margin-bottom: 0.5rem;
        }
        .btn-primary {
            background: #1a2e4f;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            transition: background 0.2s;
        }
        .btn-primary:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-edit {
            background: #f7e7c1;
            color: #b2903e;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
            margin-right: 0.5rem;
        }
        .btn-edit:hover {
            background: #b2903e;
            color: #fff;
        }
        .btn-delete {
            background: #f8d7da;
            color: #dc3545;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-weight: bold;
            font-family: 'Georgia', serif;
        }
        .btn-delete:hover {
            background: #dc3545;
            color: #fff;
        }
        .btn-group {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }
        .back-link {
            margin-top: 1.5rem;
            display: inline-block;
        }
        .count-badge {
            font-weight: normal;
            font-size: 0.95rem;
            color: #7a6b52;
        }
        .alert {
            border-radius: 8px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="page-header">Domain Details</div>
        
        <div class="domain-detail-card">
            <div class="domain-name">{{ domain.name }}</div>
            <div class="domain-sections">Sections: {{ domain.sections|length }}</div>

            <div class="btn-group">
                <a href="{{ path('admin_domain_edit', {'id': domain.id}) }}" class="btn btn-edit" title="Edit domain">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <button type="button" class="btn btn-delete" data-bs-toggle="modal" data-bs-target="#deleteModal" title="Delete domain">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </div>

            <div class="section-list">
                <strong>Sections in this Domain:</strong>
                {% if domain.sections|length > 0 %}
                    <ul>
                        {% for section in domain.sections %}
                            <li>
                                <a href="{{ path('admin_section_show', {'id': section.id}) }}">{{ section.name }}</a>
                                <span class="count-badge">({{ section.books|length }} books)</span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="text-muted">No sections found in this domain.</div>
                {% endif %}
            </div>
            
            <div class="section-list">
                <strong>Books in this Domain:</strong>
                {% set bookCount = 0 %}
                {% for section in domain.sections %}
                    {% set bookCount = bookCount + section.books|length %}
                {% endfor %}
                {% if bookCount > 0 %}
                    <div>This domain contains {{ bookCount }} books across all sections.</div>
                {% else %}
                    <div class="text-muted">No books found in this domain.</div>
                {% endif %}
            </div>
            
            <a href="{{ path('admin_domains_index') }}" class="btn btn-primary back-link">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
    
    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the domain "{{ domain.name }}"?
                    {% if domain.sections|length > 0 %}
                        <div class="alert alert-warning mt-3">
                            <strong>Warning:</strong> This domain contains {{ domain.sections|length }} sections. Deleting this domain will also delete all sections and could affect associated books.
                        </div>
                    {% endif %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="post" action="{{ path('admin_domain_delete', {'id': domain.id}) }}" style="display: inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ domain.id) }}">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 