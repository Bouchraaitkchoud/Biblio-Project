{% extends 'base.html.twig' %}

{% block title %}Admin - Domains Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="admin-nav">
            <div class="admin-nav-links">
                <a href="{{ path('admin_dashboard') }}" class="admin-nav-link">Dashboard</a>
                <a href="{{ path('admin_orders_index') }}" class="admin-nav-link">Orders</a>
                <a href="{{ path('admin_domains_index') }}" class="admin-nav-link active">Domains</a>
                <a href="{{ path('admin_sections_index') }}" class="admin-nav-link">Sections</a>
                <a href="{{ path('admin_authors_index') }}" class="admin-nav-link">Authors</a>
                <a href="{{ path('admin_books_index') }}" class="admin-nav-link">Books</a>
                <a href="{{ path('app_domains') }}" class="admin-nav-link">Main Site</a>
            </div>
            <div class="admin-user-info">
                Welcome, Admin | <a href="{{ path('app_logout') }}" style="color: white;">Logout</a>
            </div>
        </div>
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="page-header">
            <h1>Domains Management</h1>
            <a href="{{ path('admin_domain_new') }}" class="btn btn-add">
                <i class="fas fa-plus"></i> Add New Domain
            </a>
        </div>
        
        <form class="admin-search-form" method="get" action="{{ path('admin_domains_index') }}">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search by domain name..." value="{{ searchTerm }}">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
            {% if searchTerm %}
                <a href="{{ path('admin_domains_index') }}" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Clear
                </a>
            {% endif %}
        </form>
        
        {% if pagination.totalItems == 0 %}
            <div class="no-items">
                <h3>No Domains Found</h3>
                <p class="text-muted">{% if searchTerm %}No results for "{{ searchTerm }}". Try a different search term.{% else %}Get started by adding your first domain.{% endif %}</p>
                <a href="{{ path('admin_domain_new') }}" class="btn btn-add mt-3">
                    <i class="fas fa-plus"></i> Add New Domain
                </a>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="admin-table table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Sections</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for domain in domains %}
                            <tr>
                                <td>{{ domain.id }}</td>
                                <td>{{ domain.name }}</td>
                                <td>{{ domain.sections|length }}</td>
                                <td class="actions">
                                    <a href="{{ path('admin_domain_show', {'id': domain.id}) }}" class="btn btn-sm btn-primary" title="View details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_domain_edit', {'id': domain.id}) }}" class="btn btn-sm btn-edit" title="Edit domain">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_domain_delete', {'id': domain.id}) }}" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this domain?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ domain.id) }}">
                                        <button class="btn btn-sm btn-delete" title="Delete domain">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">
                        Showing {{ domains|length }} of {{ pagination.totalItems }} domains
                    </small>
                </div>
                
                {% if pagination.totalPages > 1 %}
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            {% if pagination.currentPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('admin_domains_index', {page: pagination.currentPage - 1, search: searchTerm}) }}">Previous</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Previous</span>
                                </li>
                            {% endif %}
                            
                            {% for i in max(1, pagination.currentPage - 2)..min(pagination.totalPages, pagination.currentPage + 2) %}
                                <li class="page-item {{ i == pagination.currentPage ? 'active' }}">
                                    <a class="page-link" href="{{ path('admin_domains_index', {page: i, search: searchTerm}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}
                            
                            {% if pagination.currentPage < pagination.totalPages %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('admin_domains_index', {page: pagination.currentPage + 1, search: searchTerm}) }}">Next</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Next</span>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %} 