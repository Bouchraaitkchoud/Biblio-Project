{% extends 'base.html.twig' %}

{% block title %}Borrowed Books{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Currently Borrowed Books</h1>
        <a href="{{ path('admin_orders_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Orders
        </a>
    </div>

    {% if cartItems is empty %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No books are currently borrowed.
        </div>
    {% else %}
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Barcode</th>
                                <th>Book Title</th>
                                <th>Author</th>
                                <th>Borrower</th>
                                <th>Borrowed Date</th>
                                <th>Due Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for cartItem in cartItems %}
                                {% set exemplaire = cartItem.exemplaire %}
                                {% set cart = cartItem.cart %}
                                {% set borrower = cart.user %}
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">{{ exemplaire.barcode }}</span>
                                    </td>
                                    <td>
                                        <strong>{{ exemplaire.book.title }}</strong>
                                    </td>
                                    <td>{{ exemplaire.book.authorName }}</td>
                                    <td>
                                        {% if borrower %}
                                            <div>
                                                <strong>{{ borrower.firstName }} {{ borrower.lastName }}</strong>
                                                <br>
                                                <small class="text-muted">{{ borrower.email }}</small>
                                            </div>
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ cartItem.addedAt|date('d/m/Y H:i') }}
                                    </td>
                                    <td>
                                        {% if exemplaire.dueDate %}
                                            <span class="{% if exemplaire.dueDate < date() %}text-danger{% else %}text-success{% endif %}">
                                                {{ exemplaire.dueDate|date('d/m/Y') }}
                                            </span>
                                        {% else %}
                                            <span class="text-muted">Not set</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-warning">{{ exemplaire.status|title }}</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('admin_exemplaire_return_details', {'id': exemplaire.id}) }}" 
                                               class="btn btn-success btn-sm" 
                                               title="Return Book">
                                                <i class="fas fa-undo"></i> Return
                                            </a>
                                            <a href="{{ path('admin_exemplaire_edit', {'id': exemplaire.id}) }}" 
                                               class="btn btn-outline-primary btn-sm" 
                                               title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="{{ path('admin_books_show', {'id': exemplaire.book.id}) }}" 
                                               class="btn btn-outline-info btn-sm" 
                                               title="View Book Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
                <div class="mt-3">
                    <p class="text-muted">
                        <i class="fas fa-info-circle"></i> 
                        Total borrowed books: <strong>{{ cartItems|length }}</strong>
                    </p>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Auto-refresh every 30 seconds to keep data current
        setTimeout(function() {
            window.location.reload();
        }, 30000);
    </script>
{% endblock %}