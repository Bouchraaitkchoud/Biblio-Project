{% extends 'base.html.twig' %}

{% block title %}{{ publisher.name }} - Éditeur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #fdfaf5 0%, #f8f5f0 100%) !important;
        }
        
        .publisher-header {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            border-left: 5px solid #b2903e;
            text-align: center;
        }
        
        .publisher-name {
            color: #1a2e4f;
            font-family: 'Merriweather', serif;
            margin-bottom: 1rem;
        }
        
        .books-section {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            border-left: 5px solid #b2903e;
        }
        
        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }
        
        .book-card {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
            cursor: pointer;
        }
        
        .book-card:hover {
            background: white;
            border-color: #b2903e;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }
        
        .book-title {
            font-weight: 600;
            color: #1a2e4f;
            margin-bottom: 0.5rem;
            font-family: 'Merriweather', serif;
        }
        
        .book-authors {
            color: #b2903e;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }
        
        .book-year {
            color: #666;
            font-size: 0.85rem;
        }
        
        .no-books {
            text-align: center;
            padding: 3rem;
            color: #666;
        }
        
        .no-books i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
    </style>
{% endblock %}

{% block body %}
<main class="library-main">
    <div class="publisher-header">
        <h1 class="publisher-name">{{ publisher.name }}</h1>
        <p class="text-muted">
            <i class="fas fa-building"></i> Maison d'édition
        </p>
    </div>
    
    <div class="books-section">
        <h3 style="color: #1a2e4f; font-family: 'Merriweather', serif; border-bottom: 2px solid #b2903e; padding-bottom: 0.5rem; margin-bottom: 1.5rem;">
            <i class="fas fa-book"></i> Livres publiés ({{ publisher.books|length }})
        </h3>
        
        {% if publisher.books|length > 0 %}
            <div class="books-grid">
                {% for book in publisher.books %}
                    <div class="book-card" onclick="window.location.href='{{ path('book_show', {id: book.id}) }}'">
                        <h5 class="book-title">{{ book.title }}</h5>
                        <div class="book-authors">
                            {% if book.authors|length > 0 %}
                                <i class="fas fa-user"></i>
                                {% for author in book.authors %}
                                    {{ author.name }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            {% else %}
                                <i class="fas fa-user"></i> Auteur inconnu
                            {% endif %}
                        </div>
                        {% if book.publicationYear %}
                            <div class="book-year">
                                <i class="fas fa-calendar"></i> {{ book.publicationYear }}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="no-books">
                <i class="fas fa-book-open"></i>
                <h4>Aucun livre trouvé</h4>
                <p>Cet éditeur n'a pas encore de livres dans notre catalogue.</p>
            </div>
        {% endif %}
    </div>
</main>
{% endblock %}