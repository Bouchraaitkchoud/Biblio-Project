{% extends 'base.html.twig' %}

{% block title %}Résultats de recherche{% if query %} - "{{ query }}"{% endif %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #fdfaf5 0%, #f8f5f0 100%) !important;
        }
        
        .search-header {
            text-align: center;
            margin: 2rem 0;
            color: #1a2e4f;
        }
        
        .search-stats {
            background: white;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 2rem;
            border-left: 5px solid #b2903e;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .section-title {
            color: #1a2e4f;
            font-family: 'Merriweather', serif;
            border-bottom: 2px solid #b2903e;
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
        }
        
        .result-section {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            border-left: 5px solid #b2903e;
        }
        
        .result-section .row {
            display: grid !important;
            grid-template-columns: repeat(3, 1fr) !important;
            gap: 1rem !important;
            margin: 0 !important;
        }
        
        .result-section .col-md-4 {
            width: 100% !important;
            padding: 0 !important;
            max-width: none !important;
            flex: none !important;
        }
        
        .result-item {
            padding: 1rem;
            border-radius: 10px;
            border: 1px solid #e9ecef;
            background: #fff;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
            transition: box-shadow 0.2s, transform 0.2s;
            cursor: pointer;
            height: 100%;
            min-height: 300px;
            display: flex;
            flex-direction: column;
        }
        
        .result-item:hover {
            box-shadow: 0 8px 18px rgba(0,0,0,0.08);
            transform: translateY(-4px);
        }
        
        .result-link {
            color: inherit;
            text-decoration: none;
            height: 100%;
            display: flex;
            flex-direction: column;
        }
        
        .result-link:hover {
            text-decoration: none;
        }
        
        .book-cover {
            max-width: 90px;
            height: 120px;
            object-fit: cover;
            border-radius: 6px;
            margin: 0 auto 0.7rem;
            border: 1px solid #e8e4db;
            display: block;
        }
        
        .result-item h4 {
            font-size: 1rem;
            margin-bottom: 0.5rem;
            line-height: 1.3;
            min-height: 2.6em;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }
        
        .result-item .text-muted {
            font-size: 0.9rem;
            margin-bottom: 0.3rem;
        }
        
        .result-item small {
            font-size: 0.85rem;
            display: block;
        }
        
        .active-filter {
            background-color: #b2903e;
            color: white;
            padding: 0.5rem 1.2rem;
            border-radius: 6px;
            margin-bottom: 1.5rem;
            display: inline-block;
            font-family: 'Georgia', serif;
            font-size: 1.1rem;
        }
        
        h2, h3, h4 {
            color: #1a2e4f;
            font-family: 'Georgia', serif;
            font-weight: bold;
        }
        
        .text-muted, small.text-muted {
            color: #7a6b52 !important;
        }
        
        .alert-info {
            background: #fff;
            color: #1a2e4f;
            border: 1.5px solid #b2903e;
            font-family: 'Georgia', serif;
        }
        
        .row {
            margin-left: -8px;
            margin-right: -8px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container search-results">
        {% if query %}
            <h2 class="mb-4">Résultats de recherche pour "{{ query }}"</h2>
            
            {% if searchType %}
                <div class="alert alert-info mb-3">
                    <strong>Type de recherche :</strong> 
                    {% if searchType == 'title' %}
                        Titre
                    {% elseif searchType == 'author' %}
                        Auteur
                    {% elseif searchType == 'publisher' %}
                        Éditeur
                    {% elseif searchType == 'discipline' %}
                        Discipline
                    {% elseif searchType == 'isbn' %}
                        ISBN
                    {% elseif searchType == 'all' %}
                        Tout
                    {% else %}
                        Tous
                    {% endif %}
                </div>
            {% endif %}
            
            {# Disciplines #}
            {% if results.disciplines|length > 0 %}
                <div class="result-section">
                    <h3>Disciplines</h3>
                    <div class="row">
                        {% for discipline in results.disciplines %}
                            <div class="col-md-4 mb-3">
                                <a href="{{ path('discipline_books', {'id': discipline.id}) }}" class="result-link">
                                    <div class="result-item">
                                        <h4>{{ discipline.name }}</h4>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Livres #}
            {% if results.books|length > 0 %}
                <div class="result-section">
                    <h3>Livres</h3>
                    <div class="row">
                        {% for book in results.books %}
                            <div class="col-md-4 mb-3">
                                <a href="{{ path('book_show', {'id': book.id}) }}" class="result-link">
                                    <div class="result-item">
                                        {% if book.coverImage %}
                                            <img src="{{ book.coverImageUrl }}" alt="{{ book.title }}" class="book-cover">
                                        {% endif %}
                                        <h4>{{ book.title }}</h4>
                                        {% if book.authors|length > 0 %}
                                            <p class="text-muted">
                                                {% for author in book.authors %}
                                                    {{ author.name }}{% if not loop.last %}, {% endif %}
                                                {% endfor %}
                                            </p>
                                        {% endif %}
                                        {% if book.publisherName %}
                                            <small class="text-muted">{{ book.publisherName }}</small>
                                        {% endif %}
                                        {% if book.isbn %}
                                            <small class="text-muted">ISBN : {{ book.isbn }}</small>
                                        {% endif %}
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Auteurs #}
            {% if results.authors|length > 0 %}
                <div class="result-section">
                    <h3>Auteurs</h3>
                    <div class="row">
                        {% for author in results.authors %}
                            <div class="col-md-4 mb-3">
                                <a href="{{ path('author_show', {'id': author.id}) }}" class="result-link">
                                    <div class="result-item">
                                        <h4>{{ author.name }}</h4>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Éditeurs #}
            {% if results.publishers|length > 0 %}
                <div class="result-section">
                    <h3>Éditeurs</h3>
                    <div class="row">
                        {% for publisher in results.publishers %}
                            <div class="col-md-4 mb-3">
                                <a href="{{ path('publisher_show', {'id': publisher.id}) }}" class="result-link">
                                    <div class="result-item">
                                        <h4>{{ publisher.name }}</h4>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Message en cas d'absence de résultats #}
            {% if results.disciplines|length == 0 and results.books|length == 0 and results.authors|length == 0 and results.publishers|length == 0 %}
                <div class="alert alert-info">
                    Aucun résultat trouvé pour "{{ query }}". Essayez un autre terme de recherche.
                </div>
            {% endif %}
        {% else %}
            <div class="search-header">
                <h2>Recherchez dans la Bibliothèque</h2>
                <p>Entrez un terme de recherche pour trouver des livres, des auteurs, des éditeurs et des disciplines.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}