{% extends 'base.html.twig' %}

{% block title %}Books in {{ section.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }} {# Inherit global styles #}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="books-container">
        <h1 class="books-title">Books in {{ section.name }}</h1>
        <ul class="books-list">
            {% for book in books %}
                <li class="book-item">
                    <span class="book-title">{{ book.title }}</span>
                    <span class="book-author">by {{ book.author }}</span>
                    <span class="add-to-cart" data-book-id="{{ book.id }}">
                        <i class="fas fa-cart-plus"></i> <!-- FontAwesome cart icon -->
                    </span>
                </li>
            {% else %}
                <li class="no-books">No books found in this section.</li>
            {% endfor %}
        </ul>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add event listeners to all "add to cart" icons
            document.querySelectorAll('.add-to-cart').forEach(function(icon) {
                icon.addEventListener('click', function(event) {
                    const bookId = this.getAttribute('data-book-id');

                    // Show a confirmation message
                    alert(`Book with ID ${bookId} has been added to your cart.`);

                    // You can expand this to actually add the book to a cart (e.g., using session storage or an API call)
                });
            });
        });
    </script>
{% endblock %}
