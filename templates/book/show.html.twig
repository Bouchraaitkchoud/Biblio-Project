{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
    <style>
        .book-detail-container {
            display: flex;
            flex-direction: column;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .book-header {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
        }
        
        .book-title {
            font-size: 2.2rem;
            margin-bottom: 10px;
            color: #333;
        }
        
        .book-author {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 20px;
        }
        
        .book-cover {
            max-width: 300px;
            height: auto;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            margin-right: 30px;
        }
        
        .no-cover {
            width: 300px;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f5f5f5;
            border-radius: 5px;
            margin-right: 30px;
        }
        
        .book-info-container {
            display: flex;
            flex-direction: column;
            flex: 1;
        }
        
        .book-details {
            display: grid;
            grid-template-columns: 150px 1fr;
            gap: 10px;
            margin-bottom: 20px;
        }
        
        .detail-label {
            font-weight: bold;
            color: #555;
        }
        
        .detail-value {
            color: #333;
        }
        
        .book-description {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 30px;
            line-height: 1.6;
            color: #444;
        }
        
        .publisher-section {
            margin-top: 30px;
            padding: 20px;
            background-color: #f5f8ff;
            border-radius: 5px;
            border-left: 4px solid #3498db;
        }
        
        .publisher-heading {
            font-size: 1.3rem;
            margin-bottom: 15px;
            color: #3498db;
        }
        
        .publisher-details {
            display: grid;
            grid-template-columns: 120px 1fr;
            gap: 10px;
        }
        
        .publisher-label {
            font-weight: bold;
            color: #555;
        }
        
        .publisher-value {
            color: #333;
        }
        
        .back-button {
            display: inline-block;
            margin-top: 20px;
            background-color: #3498db;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s;
        }
        
        .back-button:hover {
            background-color: #2980b9;
        }
        
        @media (max-width: 768px) {
            .book-header {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .book-cover, .no-cover {
                margin-right: 0;
                margin-bottom: 20px;
                max-width: 100%;
            }
            
            .book-details, .publisher-details {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="book-detail-container">
        <div class="book-header">
            {% if book.coverImage %}
                <img src="{{ book.coverImage }}" alt="{{ book.title }}" class="book-cover">
            {% else %}
                <div class="no-cover">
                    <i class="fas fa-book fa-4x" style="color: #aaa;"></i>
                </div>
            {% endif %}
            
            <div class="book-info-container">
                <h1 class="book-title">{{ book.title }}</h1>
                {% if book.authorName %}
                    <div class="book-author">By {{ book.authorName }}</div>
                {% endif %}
                
                <div class="book-details">
                    {% if book.isbn %}
                        <div class="detail-label">ISBN:</div>
                        <div class="detail-value">{{ book.isbn }}</div>
                    {% endif %}
                    
                    {% if book.publicationYear %}
                        <div class="detail-label">Publication Year:</div>
                        <div class="detail-value">{{ book.publicationYear }}</div>
                    {% endif %}
                    
                    <div class="detail-label">Section:</div>
                    <div class="detail-value">{{ book.section.name }}</div>
                    
                    <div class="detail-label">Domain:</div>
                    <div class="detail-value">{{ book.section.domain.name }}</div>
                </div>
                
                {% if book.publishers and book.publishers|length > 0 %}
                    <div class="publisher-section">
                        <h3 class="publisher-heading">Publisher Information</h3>
                        {% for publisher in book.publishers %}
                            <div class="publisher-details">
                                <div class="publisher-label">Name:</div>
                                <div class="publisher-value">{{ publisher.name }}</div>
                                
                                {% if publisher.address %}
                                    <div class="publisher-label">Address:</div>
                                    <div class="publisher-value">{{ publisher.address }}</div>
                                {% endif %}
                                
                                {% if publisher.city or publisher.country %}
                                    <div class="publisher-label">Location:</div>
                                    <div class="publisher-value">
                                        {% if publisher.city %}{{ publisher.city }}{% endif %}
                                        {% if publisher.city and publisher.country %}, {% endif %}
                                        {% if publisher.country %}{{ publisher.country }}{% endif %}
                                    </div>
                                {% endif %}
                                
                                {% if publisher.website %}
                                    <div class="publisher-label">Website:</div>
                                    <div class="publisher-value">
                                        <a href="{{ publisher.website }}" target="_blank">{{ publisher.website }}</a>
                                    </div>
                                {% endif %}
                            </div>
                            {% if not loop.last %}<hr>{% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
        
        {% if book.description %}
            <div class="book-description">
                <h3>Description</h3>
                <p>{{ book.description|nl2br }}</p>
            </div>
        {% endif %}
        
        <a href="{{ path('app_domains') }}" class="back-button">
            <i class="fas fa-arrow-left"></i> Back to Catalog
        </a>
    </div>
{% endblock %} 