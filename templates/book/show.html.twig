{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
    <style>
        html, body {
            background: #fdfaf5 !important;
        }
        .book-detail-main {
            max-width: 900px;
            margin: 2.5rem auto;
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.06);
            border-left: 5px solid #3365b7;
            padding: 2.5rem 2rem 2rem 2rem;
            display: flex;
            gap: 2.5rem;
            align-items: flex-start;
        }
        .book-detail-cover {
            flex: 0 0 240px;
            max-width: 240px;
            min-width: 180px;
            display: flex;
            align-items: flex-start;
            justify-content: center;
        }
        .book-detail-cover img, .book-detail-cover .no-cover {
            width: 100%;
            height: 340px;
            object-fit: cover;
            border-radius: 10px;
            background: #f5f5f5;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .book-detail-info {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
        .book-title {
            font-size: 2.2rem;
            font-weight: bold;
            color: #1a2e4f;
            margin-bottom: 0.5rem;
            font-family: 'Georgia', serif;
        }
        .book-author {
            font-size: 1.1rem;
            color: #7a6b52;
            margin-bottom: 1.2rem;
        }
        .book-meta {
            display: grid;
            grid-template-columns: 140px 1fr;
            gap: 0.5rem 1.2rem;
            margin-bottom: 1.5rem;
        }
        .meta-label {
            font-weight: bold;
            color: #3365b7;
            font-family: 'Georgia', serif;
        }
        .meta-value {
            color: #4e4a45;
        }
        .book-description {
            background: #f9f6f1;
            padding: 1.2rem 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            color: #4e4a45;
            font-size: 1.08rem;
        }
        .add-to-cart-btn {
            background-color: #3365b7;
            color: white;
            border: none;
            padding: 0.7rem 1.5rem;
            font-size: 1.1rem;
            border-radius: 6px;
            font-family: 'Georgia', serif;
            cursor: pointer;
            transition: background 0.3s;
            flex: 1;
            text-align: center;
        }
        .add-to-cart-btn:hover:not(:disabled) {
            background-color: #2555a7;
        }
        .add-to-cart-btn:disabled {
            background-color: #d6c3a5;
            cursor: not-allowed;
        }
        .view-cart-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background-color: #28a745;
            color: white;
            padding: 0.7rem 1.5rem;
            border-radius: 6px;
            text-decoration: none;
            font-family: 'Georgia', serif;
            font-size: 1.1rem;
            transition: background 0.3s;
            position: relative;
            flex: 1;
            text-align: center;
        }
        .view-cart-btn:hover {
            background-color: #218838;
            color: white;
            text-decoration: none;
        }
        .cart-count-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: #dc3545;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 0.8rem;
            font-weight: bold;
            min-width: 18px;
            text-align: center;
        }
        .back-button {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background-color: #1a2e4f;
            color: white;
            padding: 0.7rem 1.5rem;
            border-radius: 6px;
            text-decoration: none;
            font-family: 'Georgia', serif;
            font-size: 1.1rem;
            transition: background 0.3s;
            flex: 1;
            text-align: center;
        }
        .back-button:hover {
            background-color: #13203a;
            color: white;
            text-decoration: none;
        }
        .buttons-container {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }
        
        /* Modal Styles */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }

        .modal-overlay.active {
            display: flex;
        }

        .modal-content {
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            padding: 2rem;
            max-width: 500px;
            width: 90%;
            border-left: 5px solid #b2903e;
            animation: slideIn 0.3s ease-out;
        }

        @keyframes slideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .modal-header {
            font-size: 1.5rem;
            font-weight: bold;
            color: #1a2e4f;
            margin-bottom: 1rem;
            font-family: 'Georgia', serif;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .modal-body {
            font-size: 1.1rem;
            color: #4e4a45;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .book-title-modal {
            color: #b2903e;
            font-weight: bold;
            font-style: italic;
        }

        .modal-buttons {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
        }

        .modal-btn {
            padding: 0.7rem 1.5rem;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            font-family: 'Georgia', serif;
            transition: all 0.3s ease;
        }

        .modal-btn-confirm {
            background: #b2903e;
            color: white;
        }

        .modal-btn-confirm:hover {
            background: #a07d33;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(178, 144, 62, 0.3);
        }

        .modal-btn-cancel {
            background: #e9ecef;
            color: #1a2e4f;
        }

        .modal-btn-cancel:hover {
            background: #d6d8db;
            transform: translateY(-2px);
        }

        @media (max-width: 900px) {
            .book-detail-main {
                flex-direction: column;
                padding: 1.5rem 0.7rem;
                gap: 1.5rem;
            }
            .buttons-container {
                flex-direction: column;
                gap: 0.8rem;
            }
            .book-detail-cover {
                max-width: 100%;
                min-width: 0;
            }
            .book-detail-cover img, .book-detail-cover .no-cover {
                height: 220px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<!-- Modal de confirmation -->
<div class="modal-overlay" id="confirmModal">
    <div class="modal-content">
        <div class="modal-header">
            <i class="fas fa-question-circle" style="color: #b2903e;"></i>
        </div>
        <div class="modal-body">
            Souhaitez-vous procéder à l’ajout du livre
            <span class="book-title-modal" id="modalBookTitle">Loading...</span> 
            à votre panier ?
        </div>
        <div class="modal-buttons">
            <button class="modal-btn modal-btn-cancel" id="modalCancelBtn">
                <i class="fas fa-times"></i> Annuler
            </button>
            <button class="modal-btn modal-btn-confirm" id="modalConfirmBtn">
                <i class="fas fa-check"></i> Ajouter
            </button>
        </div>
    </div>
</div>

<div class="book-detail-main">
    <div class="book-detail-cover">
        {% if book.coverImage %}
            <img src="{{ book.coverImage }}" alt="{{ book.title }}">
        {% else %}
            <div class="no-cover">
                <i class="fas fa-book fa-3x" style="color: #7aa5e3;"></i>
            </div>
        {% endif %}
    </div>
    <div class="book-detail-info">
        <div class="book-title">{{ book.title }}</div>
        {% if book.authorName %}
            <div class="book-author">Par {{ book.authorName }}</div>
        {% endif %}
        <div class="book-meta">
            {% if book.isbn %}
                <div class="meta-label">ISBN :</div>
                <div class="meta-value">{{ book.isbn }}</div>
            {% endif %}
            {% if book.publicationYear %}
                <div class="meta-label">Année de publication :</div>
                <div class="meta-value">{{ book.publicationYear }}</div>
            {% endif %}
            {% if book.disciplines|length > 0 %}
                <div class="meta-label">Disciplines :</div>
                <div class="meta-value">{{ book.disciplines|map(d => d.name)|join(', ') }}</div>
            {% endif %}
        </div>
        {% if book.description %}
            <div class="book-description">
                <strong>Description :</strong><br>
                {{ book.description|nl2br }}
            </div>
        {% endif %}
        
        <div class="availability-info" style="margin: 1.5rem 0; padding: 1rem; border-radius: 8px; border-left: 5px solid {% if book.isAvailable %}#28a745{% else %}#dc3545{% endif %}; background: {% if book.isAvailable %}#f8fff9{% else %}#fff5f5{% endif %};">
            {% if book.isAvailable %}
                <i class="fas fa-check-circle" style="color: #28a745;"></i> 
                <strong style="color: #28a745;">Disponible</strong>
                <small style="display: block; color: #666; margin-top: 0.3rem;">
                    {{ book.availableCount }} exemplaire(s) disponible(s)
                </small>
            {% else %}
                <i class="fas fa-times-circle" style="color: #dc3545;"></i> 
                <strong style="color: #dc3545;">Non disponible</strong>
                <small style="display: block; color: #666; margin-top: 0.3rem;">
                    Tous les exemplaires sont actuellement empruntés
                </small>
            {% endif %}
        </div>
        
        <div class="buttons-container">
            {% if book.isAvailable %}
                <button id="add-to-cart-btn" class="add-to-cart-btn" onclick="window.addToCartGlobal({{ book.id }}, this); return false;">
                    <i class="fas fa-cart-plus"></i> Ajouter au panier
                </button>
            {% else %}
                <button class="add-to-cart-btn" disabled style="background: #6c757d; cursor: not-allowed; opacity: 0.6;">
                    <i class="fas fa-ban"></i> Non disponible
                </button>
            {% endif %}
            
            <a href="{{ path('view_cart') }}" class="view-cart-btn">
                <i class="fas fa-shopping-cart"></i> Voir mon panier
                {% set cartCount = cart_count() %}
                {% if cartCount > 0 %}
                    <span class="cart-count-badge">{{ cartCount }}</span>
                {% endif %}
            </a>
            
            <a href="{{ path('home') }}" class="back-button">
                <i class="fas fa-arrow-left"></i> Retour au catalogue
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    let currentBookId = null;
    let currentButton = null;

    document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('confirmModal');
        const modalConfirmBtn = document.getElementById('modalConfirmBtn');
        const modalCancelBtn = document.getElementById('modalCancelBtn');
        const modalBookTitle = document.getElementById('modalBookTitle');

        if (typeof window.addToCartGlobal !== 'function') {
            window.addToCartGlobal = function(bookId, button) {
                const bookTitle = document.querySelector('.book-title').textContent;
                
                // Affiche la modal
                currentBookId = bookId;
                currentButton = button;
                modalBookTitle.textContent = bookTitle;
                modal.classList.add('active');
            };
        }

        // Bouton Confirmer
        modalConfirmBtn.addEventListener('click', function() {
            modal.classList.remove('active');
            addToCartProcess(currentBookId, currentButton);
        });

        // Bouton Annuler
        modalCancelBtn.addEventListener('click', function() {
            modal.classList.remove('active');
            currentBookId = null;
            currentButton = null;
        });

        // Fermer la modal en cliquant en dehors
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                modal.classList.remove('active');
                currentBookId = null;
                currentButton = null;
            }
        });
    });

    function addToCartProcess(bookId, button) {
        const originalContent = button.innerHTML;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Ajout en cours...';
        button.disabled = true;
        
        fetch(`/add-to-cart/${bookId}`, {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                button.innerHTML = '<i class="fas fa-check"></i> Ajouté !';
                button.style.backgroundColor = '#28a745';
                const headerBadge = document.querySelector('.cart-badge');
                const currentCount = headerBadge ? parseInt(headerBadge.textContent) : 0;
                if (window.updateCartBadge) {
                    window.updateCartBadge(currentCount + 1);
                }
                updateLocalCartButton(currentCount + 1);
                setTimeout(() => {
                    button.innerHTML = originalContent;
                    button.disabled = false;
                    button.style.backgroundColor = '';
                }, 2000);
            } else {
                button.innerHTML = originalContent;
                button.disabled = false;
                showErrorModal(data.message || 'Erreur lors de l\'ajout au panier');
            }
        })
        .catch(error => {
            console.error('Erreur:', error);
            button.innerHTML = originalContent;
            button.disabled = false;
            showErrorModal('Erreur lors de l\'ajout : ' + error.message);
        });
    }

    function showErrorModal(message) {
        alert(message); // Ou tu peux créer une autre modal pour les erreurs
    }

    function updateLocalCartButton(count) {
        const cartBtn = document.querySelector('.view-cart-btn');
        const existingBadge = cartBtn ? cartBtn.querySelector('.cart-count-badge') : null;
        if (count > 0) {
            if (existingBadge) {
                existingBadge.textContent = count;
            } else if (cartBtn) {
                const badge = document.createElement('span');
                badge.className = 'cart-count-badge';
                badge.textContent = count;
                cartBtn.appendChild(badge);
            }
        } else {
            if (existingBadge) {
                existingBadge.remove();
            }
        }
    }
</script>
{% endblock %}