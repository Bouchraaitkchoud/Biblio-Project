{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
    <style>
        html, body {
            background: #fdfaf5 !important;
        }
        .book-detail-main {
            max-width: 900px;
            margin: 2.5rem auto;
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.06);
            border-left: 5px solid #b2903e;
            padding: 2.5rem 2rem 2rem 2rem;
            display: flex;
            gap: 2.5rem;
            align-items: flex-start;
        }
        .book-detail-cover {
            flex: 0 0 240px;
            max-width: 240px;
            min-width: 180px;
            display: flex;
            align-items: flex-start;
            justify-content: center;
        }
        .book-detail-cover img, .book-detail-cover .no-cover {
            width: 100%;
            height: 340px;
            object-fit: cover;
            border-radius: 10px;
            background: #f5f5f5;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .book-detail-info {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
        .book-title {
            font-size: 2.2rem;
            font-weight: bold;
            color: #1a2e4f;
            margin-bottom: 0.5rem;
            font-family: 'Georgia', serif;
        }
        .book-author {
            font-size: 1.1rem;
            color: #7a6b52;
            margin-bottom: 1.2rem;
        }
        .book-meta {
            display: grid;
            grid-template-columns: 140px 1fr;
            gap: 0.5rem 1.2rem;
            margin-bottom: 1.5rem;
        }
        .meta-label {
            font-weight: bold;
            color: #b2903e;
            font-family: 'Georgia', serif;
        }
        .meta-value {
            color: #4e4a45;
        }
        .book-description {
            background: #f9f6f1;
            padding: 1.2rem 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            color: #4e4a45;
            font-size: 1.08rem;
        }
        .add-to-cart-btn {
            background-color: #b2903e;
            color: white;
            border: none;
            padding: 0.7rem 1.5rem;
            font-size: 1.1rem;
            border-radius: 6px;
            font-family: 'Georgia', serif;
            cursor: pointer;
            transition: background 0.3s;
            margin-bottom: 1.2rem;
        }
        .add-to-cart-btn:hover:not(:disabled) {
            background-color: #a07d33;
        }
        .add-to-cart-btn:disabled {
            background-color: #d6c3a5;
            cursor: not-allowed;
        }
        .back-button {
            display: inline-block;
            background-color: #1a2e4f;
            color: white;
            padding: 0.6rem 1.2rem;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            font-family: 'Georgia', serif;
            transition: background 0.3s;
        }
        .back-button:hover {
            background-color: #13203a;
        }
        @media (max-width: 900px) {
            .book-detail-main {
                flex-direction: column;
                padding: 1.5rem 0.7rem;
                gap: 1.5rem;
            }
            .book-detail-cover {
                max-width: 100%;
                min-width: 0;
            }
            .book-detail-cover img, .book-detail-cover .no-cover {
                height: 220px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="book-detail-main">
    <div class="book-detail-cover">
        {% if book.coverImage %}
            <img src="{{ book.coverImage }}" alt="{{ book.title }}">
        {% else %}
            <div class="no-cover">
                <i class="fas fa-book fa-3x" style="color: #b2903e;"></i>
            </div>
        {% endif %}
    </div>
    <div class="book-detail-info">
        <div class="book-title">{{ book.title }}</div>
        {% if book.authorName %}
            <div class="book-author">By {{ book.authorName }}</div>
        {% endif %}
        <div class="book-meta">
            {% if book.isbn %}
                <div class="meta-label">ISBN:</div>
                <div class="meta-value">{{ book.isbn }}</div>
            {% endif %}
            {% if book.publicationYear %}
                <div class="meta-label">Publication Year:</div>
                <div class="meta-value">{{ book.publicationYear }}</div>
            {% endif %}
            <div class="meta-label">Section:</div>
            <div class="meta-value">{{ book.section.name }}</div>
            <div class="meta-label">Domain:</div>
            <div class="meta-value">{{ book.section.domain.name }}</div>
        </div>
        {% if book.description %}
            <div class="book-description">
                <strong>Description:</strong><br>
                {{ book.description|nl2br }}
            </div>
        {% endif %}
        <button id="add-to-cart-btn" class="add-to-cart-btn" onclick="addToCart({{ book.id }})">
            <i class="fas fa-cart-plus"></i> Add to Cart
        </button>
        <a href="{{ path('app_domains') }}" class="back-button">
            <i class="fas fa-arrow-left"></i> Back to Catalog
        </a>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    function addToCart(bookId) {
        const button = document.getElementById('add-to-cart-btn');
        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Adding...';
        fetch(`/add-to-cart/${bookId}`, {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                button.innerHTML = '<i class="fas fa-check"></i> Added to Cart';
                button.disabled = true;
            } else {
                button.innerHTML = '<i class="fas fa-cart-plus"></i> Add to Cart';
                button.disabled = false;
                alert(data.message || 'Failed to add book to cart');
            }
        })
        .catch(error => {
            button.innerHTML = '<i class="fas fa-cart-plus"></i> Add to Cart';
            button.disabled = false;
            alert('An error occurred while adding the book to cart');
        });
    }
</script>
{% endblock %} 