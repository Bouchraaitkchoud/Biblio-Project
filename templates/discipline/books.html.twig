{% extends "base.html.twig" %}

{% block title %}Livres - {{ discipline.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #fdfaf5 0%, #f8f5f0 100%) !important;
        }
        
        main.library-main {
            width: 100%;
            max-width: 100%;
            padding: 0 1rem;
        }
        
        .page-header {
            text-align: center;
            font-size: 2.5rem;
            font-weight: bold;
            margin: 2rem 0;
            color: #1a2e4f;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
        
        .search-section {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
            border-left: 5px solid #3365b7;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }
        
        .search-input {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 12px 20px;
            font-size: 16px;
            transition: all 0.3s ease;
            font-family: 'Georgia', serif;
        }
        
        .search-input:focus {
            border-color: #3365b7;
            box-shadow: 0 0 0 0.2rem rgba(51, 101, 183, 0.25);
            outline: none;
        }

        /* LIST LAYOUT - Horizontal - FULL WIDTH */
        .books-list {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            margin-top: 2rem;
            width: 100%;
            max-width: 100%;
        }
        
        .book-row {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            cursor: pointer;
            border-left: 5px solid #3365b7;
            display: flex;
            align-items: stretch;
            min-height: 180px;
            width: 100%;
        }
        
        .book-row:hover {
            transform: translateX(5px);
            box-shadow: 0 12px 35px rgba(0,0,0,0.15);
        }
        
        .book-image-container {
            width: 140px;
            min-width: 140px;
            height: 180px;
            background: linear-gradient(45deg, #f8f9fa, #e9ecef);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }
        
        .book-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .book-image-container .fallback-icon {
            font-size: 2.5rem;
            color: #3365b7;
            opacity: 0.7;
        }
        
        .book-info {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            flex: 1;
        }
        
        .book-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 1rem;
            margin-bottom: 0.8rem;
        }
        
        .book-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #1a2e4f;
            line-height: 1.4;
            font-family: 'Merriweather', serif;
            max-width: 70%;
        }
        
        .availability-badge {
            display: inline-block;
            padding: 0.4rem 0.8rem;
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 600;
            white-space: nowrap;
        }
        
        .available {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .unavailable {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        
        .book-meta {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
            margin: 0.8rem 0;
            font-size: 0.95rem;
            color: #555;
        }
        
        .meta-item {
            display: flex;
            flex-direction: column;
        }
        
        .meta-label {
            font-weight: 600;
            color: #3365b7;
            font-size: 0.85rem;
            text-transform: uppercase;
            margin-bottom: 0.3rem;
        }
        
        .meta-value {
            color: #333;
        }
        
        .book-description {
            color: #666;
            font-size: 0.95rem;
            line-height: 1.5;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            margin-bottom: 0.8rem;
        }
        
        .book-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: auto;
        }
        
        .book-isbn {
            font-size: 0.85rem;
            color: #999;
        }
        
        .btn-view {
            background: linear-gradient(135deg, #3365b7, #4575c7);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 0.6rem 1.2rem;
            font-family: 'Georgia', serif;
            transition: all 0.3s ease;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 600;
        }
        
        .btn-view:hover {
            background: linear-gradient(135deg, #2555a7, #3365b7);
            color: white;
            text-decoration: none;
        }
        
        .no-books {
            text-align: center;
            padding: 4rem 2rem;
            color: #666;
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            border-left: 5px solid #3365b7;
            width: 100%;
        }
        
        .no-books i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #3365b7;
            opacity: 0.7;
        }
        
        .btn-search {
            background: linear-gradient(135deg, #3365b7, #4575c7);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 20px;
            font-family: 'Georgia', serif;
            transition: all 0.3s ease;
        }
        
        .btn-search:hover {
            background: linear-gradient(135deg, #2555a7, #3365b7);
            color: white;
        }

        @media (max-width: 768px) {
            .book-image-container {
                width: 100px;
                min-width: 100px;
                height: 140px;
            }
            
            .book-info {
                padding: 1rem;
            }
            
            .book-title {
                font-size: 1.1rem;
                max-width: 60%;
            }
            
            .book-meta {
                grid-template-columns: repeat(2, 1fr);
                gap: 1rem;
            }
            
            .book-row {
                min-height: 140px;
            }
            
            .page-header {
                font-size: 2rem;
                margin: 1rem 0;
            }
        }
        
        @media (max-width: 576px) {
            .book-row {
                min-height: auto;
                flex-direction: column;
            }
            
            .book-image-container {
                width: 100%;
                min-width: 100%;
                height: 150px;
            }
            
            .book-header {
                flex-direction: column;
            }
            
            .book-title {
                max-width: 100%;
                font-size: 1rem;
            }
            
            .book-meta {
                grid-template-columns: 1fr;
                gap: 0.8rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<main class="library-main">
    <h1 class="page-header">{{ discipline.name }}</h1>
    
    <div class="search-section">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <form method="GET" action="{{ path('discipline_books', {id: discipline.id}) }}">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control search-input" id="bookSearch" 
                               placeholder="Rechercher dans {{ discipline.name }}..." 
                               value="{{ searchQuery }}">
                        <button class="btn btn-search" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
                <small class="text-muted mt-2 d-block">
                    Recherche par titre, auteur ou ISBN dans cette discipline
                    {% if searchQuery %}
                        - <strong>{{ books|length }}</strong> r�sultat(s) pour "{{ searchQuery }}"
                        <a href="{{ path('discipline_books', {id: discipline.id}) }}" class="ms-2 text-primary">
                            <i class="fas fa-times"></i> Effacer
                        </a>
                    {% endif %}
                </small>
            </div>
        </div>
    </div>
    
    {% if books|length > 0 %}
        <div class="books-list" id="booksContainer">
            {% for book in books %}
                <div class="book-row" 
                     data-title="{{ book.title|lower }}" 
                     data-authors="{% for author in book.authors %}{{ author.name|lower }} {% endfor %}"
                     data-isbn="{{ book.isbn|lower|default('') }}"
                     onclick="window.location.href='{{ path('book_show', {id: book.id}) }}'">
                    
                    <!-- IMAGE LEFT -->
                    <div class="book-image-container">
                        {% if book.coverImage %}
                            <img src="{{ book.coverImage }}" alt="{{ book.title }}" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="fallback-icon" style="display: none;">
                                <i class="fas fa-book"></i>
                            </div>
                        {% else %}
                            <div class="fallback-icon">
                                <i class="fas fa-book"></i>
                            </div>
                        {% endif %}
                    </div>
                    
                    <!-- INFO RIGHT -->
                    <div class="book-info">
                        <!-- Title & Availability -->
                        <div class="book-header">
                            <h5 class="book-title">{{ book.title }}</h5>
                            <span class="availability-badge {% if book.isAvailable %}available{% else %}unavailable{% endif %}">
                                {% if book.isAvailable %}
                                    <i class="fas fa-check"></i> Disponible
                                {% else %}
                                    <i class="fas fa-times"></i> Non disponible
                                {% endif %}
                            </span>
                        </div>
                        
                        <!-- Description -->
                        {% if book.description %}
                            <div class="book-description">
                                {{ book.description|slice(0, 150) }}...
                            </div>
                        {% endif %}
                        
                        <!-- Meta Information -->
                        <div class="book-meta">
                            <div class="meta-item">
                                <span class="meta-label">Auteur(s)</span>
                                <span class="meta-value">
                                    {% if book.authors|length > 0 %}
                                        {% for author in book.authors %}
                                            {{ author.name }}{% if not loop.last %}<br>{% endif %}
                                        {% endfor %}
                                    {% else %}
                                        Auteur inconnu
                                    {% endif %}
                                </span>
                            </div>
                            <div class="meta-item">
                                <span class="meta-label">Année</span>
                                <span class="meta-value">
                                    {% if book.publicationYear %}
                                        {{ book.publicationYear }}
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </span>
                            </div>
                            <div class="meta-item">
                                <span class="meta-label">ISBN</span>
                                <span class="meta-value">{{ book.isbn|default('N/A') }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="no-books">
            <i class="fas fa-book-open"></i>
            <h4>Aucun livre trouv�</h4>
            <p>Il n'y a pas encore de livres dans cette discipline.</p>
        </div>
    {% endif %}
</main>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('bookSearch');
    const booksContainer = document.getElementById('booksContainer');
    const bookRows = document.querySelectorAll('.book-row');
    
    if (searchInput && bookRows.length > 0) {
        // Real-time search as user types (client-side filtering)
        let debounceTimer;
        searchInput.addEventListener('input', function() {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                const searchTerm = this.value.toLowerCase().trim();
                
                bookRows.forEach(row => {
                    const title = row.getAttribute('data-title');
                    const authors = row.getAttribute('data-authors');
                    const isbn = row.getAttribute('data-isbn');
                    const searchText = title + ' ' + authors + ' ' + isbn;
                    
                    if (searchTerm === '' || searchText.includes(searchTerm)) {
                        row.style.display = 'flex';
                    } else {
                        row.style.display = 'none';
                    }
                });
                
                // Update visible count
                const visibleRows = Array.from(bookRows).filter(row => row.style.display !== 'none');
                console.log(`Affichage ${visibleRows.length} livre(s) sur ${bookRows.length}`);
            }, 300);
        });

        // Submit form on Enter key
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                this.form.submit();
            }
        });
    }
});
</script>
{% endblock %}

