{% extends "base.html.twig" %}

{% block title %}Books in {{ discipline.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>{{ discipline.name }}</h1>
    <p>Browse all books in this discipline</p>
    
    {% if books|length > 0 %}
        <div class="row">
            {% for book in books %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ book.title }}</h5>
                            <p class="card-text">by {{ book.authorName }}</p>
                            {% if book.publicationYear %}
                                <small class="text-muted">Published: {{ book.publicationYear }}</small>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info">
            <h4>No Books Found</h4>
            <p>There are no books available in this discipline yet.</p>
        </div>
    {% endif %}
</div>
{% endblock %}
