{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        html, body {
            background: #fdfaf5 !important;
        }
        .cart-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .cart-content {
            width: 100%;
            max-width: 900px;
        }
        .cart-title {
            font-size: 2.5rem;
            font-family: 'Georgia', serif;
            color: #1a2e4f;
            font-weight: bold;
            margin-bottom: 2.2rem;
            text-align: center;
        }
        .cart-card {
            background: #fff;
            border-left: 4px solid #3365b7;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
            margin-bottom: 1.5rem;
            padding: 1.5rem 1.2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .cart-book-info {
            flex: 1;
        }
        .cart-book-title {
            font-size: 1.25rem;
            font-family: 'Georgia', serif;
            color: #1a2e4f;
            font-weight: bold;
            margin-bottom: 0.2rem;
        }
        .cart-book-author {
            color: #7a6b52;
            font-size: 1rem;
            margin-bottom: 0.2rem;
        }
        .cart-book-barcode {
            color: #4e4a45;
            font-size: 0.95rem;
        }
        .remove-btn {
            background: #fff;
            color: #3365b7;
            border: 1.5px solid #3365b7;
            border-radius: 6px;
            padding: 0.5rem 1.1rem;
            font-size: 1rem;
            font-family: 'Georgia', serif;
            transition: background 0.2s, color 0.2s;
        }
        .remove-btn:hover {
            background: #3365b7;
            color: #fff;
        }
        .submit-btn {
            background: #3365b7;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.7rem 2.2rem;
            font-size: 1.15rem;
            font-family: 'Georgia', serif;
            font-weight: bold;
            margin-top: 1.5rem;
            transition: background 0.2s;
        }
        .submit-btn:hover {
            background: #2555a7;
        }
        .empty-cart {
            min-height: 50vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
        .empty-cart-icon {
            font-size: 4rem;
            color: #3365b7;
            margin-bottom: 1rem;
        }
        .empty-cart-text {
            color: #7a6b52;
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
            font-family: 'Georgia', serif;
        }
        .browse-btn {
            background: #1a2e4f;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.7rem 1.5rem;
            font-size: 1.1rem;
            font-family: 'Georgia', serif;
            transition: background 0.2s;
            text-decoration: none;
        }
        .browse-btn:hover {
            background: #13203a;
            text-decoration: none;
            color: #fff;
        }
        
        /* Modal styles */
        .confirmation-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .confirmation-modal.show {
            display: flex;
        }

        .modal-content {
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            padding: 2rem;
            max-width: 450px;
            width: 90%;
            animation: slideIn 0.3s ease-out;
            border-left: 5px solid #3365b7;
        }

        @keyframes slideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .modal-icon {
            font-size: 3rem;
            color: #3365b7;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .modal-title {
            font-size: 1.4rem;
            font-weight: bold;
            color: #1a2e4f;
            text-align: center;
            margin-bottom: 1rem;
            font-family: 'Georgia', serif;
        }

        .modal-message {
            color: #7a6b52;
            text-align: center;
            margin-bottom: 2rem;
            line-height: 1.6;
            font-family: 'Georgia', serif;
            font-size: 1.05rem;
        }

        .modal-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        .modal-btn {
            padding: 0.8rem 2rem;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            font-family: 'Georgia', serif;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .modal-btn-primary {
            background: #3365b7;
            color: white;
        }

        .modal-btn-primary:hover {
            background: #9a7a34;
            transform: translateY(-2px);
        }

        .modal-btn-secondary {
            background: #e9ecef;
            color: #1a2e4f;
        }

        .modal-btn-secondary:hover {
            background: #dee2e6;
            transform: translateY(-2px);
        }
    </style>
{% endblock %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <div class="container py-5 cart-container">
        <div class="cart-title">üõí Mon Panier</div>
        
        <!-- Alerte pour les livres automatiquement retir√©s -->
        {% if removedItems is defined and removedItems|length > 0 %}
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Attention :</strong> Les livres suivants ont √©t√© automatiquement retir√©s de votre panier car ils ne sont plus disponibles :
                <ul class="mb-0 mt-2">
                    {% for book in removedItems %}
                        <li>{{ book }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        
        <!-- Notification des messages -->
        <div id="cart-notification" class="alert" style="display: none;"></div>
        
        <div class="cart-content" id="cart-content">
            {% if items|length > 0 %}
                {% for item in items %}
                    <div class="cart-card" id="cart-item-{{ item.getBook().getId() }}">
                        <div class="cart-book-info">
                            <div class="cart-book-title">{{ item.getBook().getTitle() }}</div>
                            <div class="cart-book-author">par {{ item.getBook().getAuthorName() }}</div>
                            <div class="cart-book-barcode">Barcode: {{ item.getBarcode() }}</div>
                        </div>
                        <div class="book-actions">
                            <button type="button" class="remove-btn" onclick="removeFromCart({{ item.getBook().getId() }})">
                                <i class="fas fa-trash"></i> Supprimer
                            </button>
                        </div>
                    </div>
                {% endfor %}
                <div class="text-center">
                    <button type="button" class="submit-btn" onclick="submitCart()">
                        <i class="fas fa-check"></i> Envoyer la demande
                    </button>
                </div>
            {% else %}
                <div class="empty-cart">
                    <div class="empty-cart-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="empty-cart-text">Votre panier est vide</div>
                    <a href="{{ path('home') }}" class="browse-btn">
                        <i class="fas fa-book"></i> Parcourir les livres
                    </a>
                </div>
            {% endif %}
        </div>

        <!-- Limite d'emprunt information -->
        <div style="background: #e7f1ff; border-left: 4px solid #0066cc; padding: 1rem; border-radius: 8px; margin: 1rem 0;">
            <i class="fas fa-info-circle"></i> 
            <strong>Limite :</strong> Vous pouvez emprunter maximum <span style="color: #0066cc; font-weight: bold;">{{ maxBooks }}</span> livre(s) par commande.
            
        </div>
    </div>

    <script>
    function removeFromCart(bookId) {
        const button = event.target.closest('.remove-btn');
        const cartItem = document.getElementById(`cart-item-${bookId}`);
        
        // Feedback visuel
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Suppression...';
        button.disabled = true;
        
        fetch(`/remove-from-cart/${bookId}`, {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Animation de suppression
                cartItem.style.transition = 'all 0.3s ease';
                cartItem.style.opacity = '0';
                cartItem.style.transform = 'translateX(-100%)';
                
                setTimeout(() => {
                    cartItem.remove();
                    updateCartDisplay();
                    showNotification('Livre supprim√© du panier', 'success');
                    updateCartBadge();
                }, 300);
            } else {
                button.innerHTML = '<i class="fas fa-trash"></i> Supprimer';
                button.disabled = false;
                showNotification(data.message || 'Erreur lors de la suppression', 'error');
            }
        })
        .catch(error => {
            button.innerHTML = '<i class="fas fa-trash"></i> Supprimer';
            button.disabled = false;
            showNotification('Une erreur est survenue', 'error');
        });
    }

    function submitCart() {
        const button = event.target;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Envoi en cours...';
        button.disabled = true;
        
        fetch('/submit-cart', {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const isPrinting = !!data.printUrl;

                if (isPrinting) {
                    console.log('Opening PDF file:', data.printUrl);
                    
                    // Create hidden iframe for printing
                    const printFrame = document.createElement('iframe');
                    printFrame.style.position = 'fixed';
                    printFrame.style.top = '-9999px';
                    printFrame.style.left = '-9999px';
                    printFrame.style.width = '1px';
                    printFrame.style.height = '1px';
                    printFrame.src = data.printUrl;
                    
                    document.body.appendChild(printFrame);
                    
                    // Wait for PDF to load, then print
                    printFrame.onload = function() {
                        setTimeout(() => {
                            try {
                                printFrame.contentWindow.focus();
                                printFrame.contentWindow.print();
                                console.log('Print triggered on iframe');
                            } catch (e) {
                                console.error('Print error:', e);
                            }
                        }, 1000);
                    };
                }

                // Affiche la modal de succ√®s personnalis√©e
                showSuccessModal(isPrinting);

            } else {
                showNotification(data.message || 'Erreur lors de la soumission', 'error');
                button.innerHTML = '<i class="fas fa-check"></i> Envoyer la demande';
                button.disabled = false;
            }
        })
        .catch(error => {
            showNotification('Erreur: ' + error.message, 'error');
            button.innerHTML = '<i class="fas fa-check"></i> Envoyer la demande';
            button.disabled = false;
        });
    }

    function showSuccessModal(isPrinting) {
        // Supprime la modal existante si elle existe pour la recr√©er
        const existingModal = document.getElementById('successModal');
        if (existingModal) {
            existingModal.remove();
        }
        
        const message = isPrinting 
            ? "Votre demande d'emprunt a √©t√© soumise avec succ√®s !<br>Impression du re√ßu en cours...<br><br><strong>Vous allez √™tre d√©connect√©.</strong>"
            : "Votre demande d'emprunt a √©t√© soumise avec succ√®s !<br><br><strong>Vous allez √™tre d√©connect√©.</strong>";

        const modalHTML = `
            <div class="confirmation-modal" id="successModal">
                <div class="modal-content">
                    <div class="modal-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="modal-title">Succ√®s !</div>
                    <div class="modal-message">
                        ${message}
                    </div>
                    <div class="modal-buttons">
                        <button class="modal-btn modal-btn-primary" onclick="logoutAndRedirect()">
                            <i class="fas fa-sign-out-alt"></i> D√©connexion
                        </button>
                    </div>
                </div>
            </div>
        `;
        document.body.insertAdjacentHTML('beforeend', modalHTML);
        const modal = document.getElementById('successModal');
        
        modal.classList.add('show');
        
        // Redirection automatique (plus longue si impression)
        const delay = isPrinting ? 8000 : 3000;
        setTimeout(logoutAndRedirect, delay);
    }

    function logoutAndRedirect() {
        window.location.href = '{{ path("app_logout") }}';
    }

    function updateCartDisplay() {
        const cartCards = document.querySelectorAll('.cart-card').length;
        if (cartCards === 0) {
            document.getElementById('cart-content').innerHTML = `
                <div class="empty-cart">
                    <div class="empty-cart-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="empty-cart-text">Votre panier est vide</div>
                    <a href="{{ path('home') }}" class="browse-btn">
                        <i class="fas fa-book"></i> Parcourir les livres
                    </a>
                </div>
            `;
        }
    }

    function updateCartBadge() {
        if (typeof window.updateCartBadge === 'function') {
            window.updateCartBadge();
        } else {
            const badge = document.querySelector('.cart-badge');
            if (badge) {
                const currentCount = parseInt(badge.textContent) - 1;
                if (currentCount <= 0) {
                    badge.style.display = 'none';
                } else {
                    badge.textContent = currentCount;
                }
            }
        }
    }

    function showNotification(message, type) {
        const notification = document.getElementById('cart-notification');
        notification.className = `alert alert-${type === 'success' ? 'success' : 'danger'}`;
        notification.textContent = message;
        notification.style.display = 'block';
        
        setTimeout(() => {
            notification.style.display = 'none';
        }, 4000);
    }
    </script>
{% endblock %}

