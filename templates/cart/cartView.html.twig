{% extends 'base.html.twig' %}

{% block title %}My Cart{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>My Cart</h1>
    
    {% if books|length > 0 %}
        <div class="list-group mb-3">
            {% for book in books %}
                <div class="list-group-item">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5>{{ book.title }}</h5>
                            <small class="text-muted">by {{ book.author }}</small>
                        </div>
                        <form action="{{ path('remove_from_cart', {'id': book.id}) }}" method="POST">
                            <input type="hidden" name="_token" value="{{ csrf_token('remove_item') }}">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i> Remove
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <div class="d-flex justify-content-between align-items-center">
            {# Updated to use your actual book listing route #}
            {% if section %}
                <a href="{{ path('section_books', {'id': section.id}) }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Continue
                </a>
            {% else %}
                <a href="{{ path('home') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Continue
                </a>
            {% endif %}

            <form action="{{ path('submit_cart') }}" method="POST">
                <input type="hidden" name="_token" value="{{ csrf_token('submit_cart') }}">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check-circle"></i> Submit 
                </button>
            </form>
        </div>
    {% else %}
        <div class="alert alert-info">
            Your cart is empty. 
            {% if section %}
                <a href="{{ path('section_books', {'id': section.id}) }}">Browse books</a>
            {% else %}
                <a href="{{ path('home') }}">Browse books</a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}
