{% extends 'base.html.twig' %}

{% block title %}Exemplaires Empruntés{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .borrowed-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }
        .borrowed-table th,
        .borrowed-table td {
            border: 1px solid #ccc;
            padding: 0.5rem;
            text-align: left;
        }
        .borrowed-table th {
            background: #f7f7f7;
            color: #333;
        }
    </style>
{% endblock %}

{% block content %}
    {% if borrowedExemplaires|length > 0 %}
        <h2>Exemplaires Empruntés</h2>
        <table class="borrowed-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre du Livre</th>
                    <th>Étudiant</th>
                    <th>Date d'emprunt</th>
                </tr>
            </thead>
            <tbody>
                {% for item in borrowedExemplaires %}
                    <tr>
                        <td>{{ item.exemplaire.id }}</td>
                        <td>{{ item.exemplaire.book.title }}</td>
                        <td>{{ item.student.email }}</td>
                        <td>{{ item.borrowed_at|date('d/m/Y H:i') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun exemplaire emprunté.</p>
    {% endif %}
{% endblock %}